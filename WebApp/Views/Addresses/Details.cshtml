@using Business.Essentials
@using Business.Essentials.Model
@using Business.Essentials.WebApp.Helpers
@model Address

@{
    ViewBag.Title = Resources.Details;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Addresses);
}

<h2>@Resources.Details</h2>

<fieldset>
    <legend>@Resources.Title_Address</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.TaxpayerId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TaxpayerId)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.TaxpayerName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TaxpayerName)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Street)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Street)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.ExteriorNumber)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ExteriorNumber)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.InteriorNumber)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.InteriorNumber)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Neighborhood)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Neighborhood)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Borough)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Borough)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.State)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.State)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Country)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Country)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.ZipCode)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ZipCode)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Comment)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Comment)
    </div>

    @Html.Hidden("OwnerId", (object)ViewBag.OwnerId)
    @Html.Hidden("OwnerType", (object)ViewBag.OwnerType)

</fieldset>
<p>
@if(Privilege.AllowUpdate)
{
    @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.Id }, new { @class = "button icon edit" })
}
    @Html.ActionLink(Resources.BackToList, "Details", (string)ViewBag.OwnerType, new { id = ViewBag.OwnerId }, new { @class = "button icon back" })
</p>