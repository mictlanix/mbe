@using Mictlanix.BE
@model Mictlanix.BE.Web.Models.LogOnModel

@{
	ViewBag.Title = Resources.Title_LogOn;
}



@Html.ValidationSummary(true, Resources.Message_LoginUnsuccessful)

@using (Html.BeginForm())
{
	<div class="center">
	<h2>@Resources.DisplayName_LogOn</h2>
	@*<p>
		@Resources.Message_LoginRegister
		@Html.ActionLink(Resources.Register, "Register").
	</p>*@
		<fieldset>
			@*<legend>@Resources.AccountInformation</legend>*@

			<div class="editor-label">
				@Html.LabelFor(m => m.UserName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(m => m.UserName)
				@Html.ValidationMessageFor(m => m.UserName)
			</div>

			<div class="editor-label">
				@Html.LabelFor(m => m.Password)
			</div>
			<div class="editor-field">
				@Html.PasswordFor(m => m.Password)
				@Html.ValidationMessageFor(m => m.Password)
			</div>

			@*<div class="editor-label">
				@Html.CheckBoxFor(m => m.RememberMe)
				@Html.LabelFor(m => m.RememberMe)
			</div>*@
			@*<div class="editor-field">
				@Html.ActionLink(Resources.DisplayName_ForgotPassword, "ForgotPassword")
			</div>*@
		</fieldset>

		<div class="">
			<button type="submit">@Resources.LogOn</button>
		</div>
		<div class="action-buttons">
			@Html.ActionLink(Resources.DisplayName_ForgotPassword, "ForgotPassword") | @Html.ActionLink(Resources.Register, "Register").
		</div>
	</div>
}
