@using Mictlanix.BE
@model Mictlanix.BE.Web.Models.RegisterModel

@{
    ViewBag.Title = Resources.Title_Register;
}

<h2>@Resources.DisplayName_Register</h2>
<div>
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true, @Resources.Message_RegisterUnsuccessful)

        <fieldset>
            <legend>@Resources.AccountInformation</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </fieldset>

        <div class="action-buttons">
            <button type="submit">@Resources.Register</button>
        </div>
    }
</div>
