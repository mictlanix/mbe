@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model Search<Product>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Products);
}

<p>@Html.ValidationMessageFor(x => x.Pattern)</p>

<table>
    <tr>
        <th></th>
        <th>@Html.LabelFor(x => new Product().Code)</th>
        <th>@Html.LabelFor(x => new Product().Name)</th>
        <th>@Html.LabelFor(x => new Product().UnitOfMeasurement)</th>
        <th></th>
    </tr>

@foreach (var item in Model.Results) {
    <tr>
        <td class='stretch'>
            @Html.ActionImage(Url.Content(item.Photo), "Details", new { id = item.Id },
                              new { alt = Resources.Details,
                                    title = Resources.Details,
                                    rel = Url.Action("Details", new { id = item.Id }),
                                    @class = "small tips"
                              })
        </td>
        <td class="stretch center">@Html.DisplayFor(x => item.Code)</td>
        <td style='position:relative'>
        	<p>
        		@Html.DisplayFor(x => item.Name)<br/>
        		@if (!string.IsNullOrEmpty (item.Model)) {
		        <i>@Resources.Model:</i> @item.Model
		        }
		        @if (!string.IsNullOrEmpty (item.SKU)) {
		        <i>@Resources.SKU:</i> @item.SKU
		        }
			</p>
        	<div id='labels-@item.Id' style='position:absolute;bottom:2px'>
				@Html.Partial("_Labels", item.Labels)
        	</div>
			<div class='btn-group' style='position:absolute;bottom:2px;right:2px'>
				<a class='btn btn-mini dropdown-toggle labels' data-toggle='dropdown' data-key='@item.Id' href="#">
					<i class="icon-tags"></i> Etiquetas<span class="caret"></span>
				</a>
				<ul class='dropdown-menu'></ul>
			</div>
        </td>
        <td class="stretch center">@Html.DisplayFor(x => item.UnitOfMeasurement)</td>
        <td class="actions">
        	@if(Privilege.AllowUpdate) {
            	@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            }
        	@if(Privilege.AllowDelete) {
            	@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
            }
        </td>
    </tr>
}
</table>
<div class="buttons right">
	<label class='button left'>@Model.ToString()</label>@if (Model.HasPrev) {<a class='button middle icon prev icon-only paging' title='@Resources.PrevPage' href='javascript:void(0)'></a>}@if (Model.HasNext) {<a class='button right icon next icon-only paging' title='@Resources.NextPage' href='javascript:void(0)'></a>}
</div>
<script type="text/javascript">
$('a.tips').cluetip({ showTitle: false, width:600 });
$('a.paging').click(function (e) {
	var offset=@Model.Offset;
	
	if($(this).hasClass('next')) {
		offset+=@Model.Limit;
	} else {
		offset-=@Model.Limit;
	}
	
	e.preventDefault();
	$('#activity-indicator').show();
	$('#search-results').hide();
	
	$.post('@Url.Action("Index")', { Pattern: '@Model.Pattern', Offset: offset, Limit: @Model.Limit }, function(data) {
		$('#search-results').html(data);
		$('#search-results').show();
		$('#activity-indicator').hide();
	});
});
$('.btn.labels').click(function() {
	var self = $(this);
	
	if(self.hasClass('open'))
		return;
	
	$.get('@Url.Action("EditLabels", new { id = 0 })' + self.data('key'), function (data) {
	    self.next('.dropdown-menu').html(data);
	});
});
</script>