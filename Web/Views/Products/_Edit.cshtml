@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Product

<div class='modal-header'>
	<button type='button' class='close' data-dismiss='modal'>&times;</button>
	<h3>@Resources.Product</h3>
</div>
<div class='modal-body'>
@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "product-modal-content" }, new { @class = "modal-form" })) {
    @Html.ValidationSummary(true)
	<div class="form-horizontal">
	@Html.EditorForModel()
	</div>
	<script type="text/javascript">$('#Id').attr('readonly', true);</script>
}
</div>
<div class='modal-footer'>
	<button type='button' class='btn btn-default' data-dismiss='modal'>@Resources.Discard</button>
	<button type='submit' class='btn btn-primary' onclick='$("#product-modal form").submit();'>@Resources.Save</button>
</div>