@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Models
@using Mictlanix.BE.Web.Helpers;
@{
    ViewBag.Title = Resources.Title_AccountsReceivable;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.AccountsReceivable);
}
<div class="page-header">
    <h1>@Resources.DisplayName_AccountsReceivable</h1>
</div>
<div id='master-section'>
@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "search-results", LoadingElementId = "activity-indicator", OnBegin = "onSearchBegin" })) {
	<div class="row">
  		<div class="col-xs-11">
			@Html.Editor("customer", "CustomerSelector")
		</div>
		<div class="col-xs-1">
			<button class="btn btn-primary btn-block" type="submit">
				<span class="glyphicon glyphicon-refresh"></span>
			</button>
		</div>
	</div>
}
</div>
<div id='search-results'></div>
<style type='text/css'>
ul.token-input-list { width: 100%; }
</style>
