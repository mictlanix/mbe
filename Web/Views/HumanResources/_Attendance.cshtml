@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models

@model List<AttendanceSheetByEmployee>

@if (Model.Count() > 0)
{
    <table class="table table-condensed">
        @foreach (var EmployeeSheet in Model)
        {
                @Html.Partial("_AttendanceSheetEmployee", EmployeeSheet)   
        }
    </table>
}
else
{
    <table class="table-condensed">
        <thead>
            <tr>
                <th>@Resources.Employee</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Resources.Empty</td>
            </tr>
        </tbody>
    </table>
}
