@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Models
@using Mictlanix.BE.Web.Helpers
@model TechnicalServiceReport

@{
    Layout = "~/Views/Shared/_PrintELayout.cshtml";
    ViewBag.Title = Resources.TechnicalServiceReport;
    ViewBag.Store = WebConfig.Store;
    ViewBag.Taxpayer = null;
    ViewBag.TaxpayerName = null;
    ViewBag.Address = WebConfig.Store.Address;
}

<div class="page-header">
  <h2 class="text-center">@Resources.TechnicalServiceReport</h2>
</div>

<div class="row row-bordered">
	<div class="col-xs-3 col-xs-offset-1 text-center"><strong>@Resources.Date</strong></div>
	<div class="col-xs-4 text-center text-center"><strong>@Resources.ServiceLocation</strong></div>
	<div class="col-xs-3 text-center text-center"><strong>@Resources.ServiceType</strong></div>
</div>
<div class="row row-bordered top-borderless">
	<div class="col-xs-3 col-xs-offset-1 text-center">@Html.DisplayFor(x => x.Date)</div>
	<div class="col-xs-4 text-center">@Html.DisplayFor(x => x.Location)</div>
	<div class="col-xs-3 text-center">@Html.DisplayFor(x => x.Type)</div>
</div>

<div class="row row-bordered top-space">
	<div class="col-xs-3 col-xs-offset-1 text-center"><strong>@Resources.Equipment</strong></div>
	<div class="col-xs-4 text-center"><strong>@Resources.Brand / @Resources.Model</strong></div>
	<div class="col-xs-3 text-center"><strong>@Resources.SerialNumber</strong></div>
</div>
<div class="row row-bordered top-borderless">
	<div class="col-xs-3 col-xs-offset-1 text-center">@Html.DisplayFor(x => x.Equipment)&nbsp;</div>
	<div class="col-xs-4 text-center">@Html.DisplayFor(x => x.Brand) @Html.DisplayFor(x => x.Model)&nbsp;</div>
	<div class="col-xs-3 text-center">@Html.DisplayFor(x => x.SerialNumber)&nbsp;</div>
</div>

<div class="row row-bordered bottom-borderless top-space">
	<div class="col-xs-3 col-xs-offset-1 text-center">Médico Responsable</div>
	<div class="col-xs-7">@Html.DisplayFor(x => x.User)</div>
</div>
<div class="row row-bordered bottom-borderless">
	<div class="col-xs-3 col-xs-offset-1 text-center" style="min-height:11mm;">Responsable del Servicio</div>
	<div class="col-xs-7" style="min-height:11mm;">@Html.DisplayFor(x => x.Technician)</div>
</div>
<div class="row row-bordered">
	<div class="col-xs-3 col-xs-offset-1 text-center">Costo por Servicio</div>
	<div class="col-xs-7">@Html.DisplayFor(x => x.Cost)</div>
</div>

<div class="row row-bordered top-space">
  	<div class="col-xs-10 col-xs-offset-1 text-center">@Html.LabelFor(x => x.UserReport)</div>
</div>
<div class="row row-bordered top-borderless">
  	<div class="col-xs-10 col-xs-offset-1" style="min-height:20mm;">@Html.DisplayFor(x => x.UserReport)</div>
</div>

<div class="row row-bordered top-space">
  	<div class="col-xs-10 col-xs-offset-1 text-center">@Html.LabelFor(x => x.Description)</div>
</div>
<div class="row row-bordered top-borderless">
  	<div class="col-xs-10 col-xs-offset-1" style="min-height:20mm;">@Html.DisplayFor(x => x.Description)</div>
</div>

<div class="row row-bordered top-space">
  	<div class="col-xs-10 col-xs-offset-1 text-center">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row row-bordered top-borderless">
  	<div class="col-xs-10 col-xs-offset-1" style="min-height:20mm;">@Html.DisplayFor(x => x.Comment)</div>
</div>

<div class="clearfix" style="min-height:15mm;"></div>

<div class="row top-bordered">
  	<div class="col-xs-8 col-xs-offset-2 text-center">Nombre y firma de conformidad del médico responsable</div>
</div>
