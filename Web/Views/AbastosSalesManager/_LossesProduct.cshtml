@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model Search<PurchaseOrder>
@{
    var CurrentUser = Html.CurrentUser () ?? new User ();
    var Privilege = Html.GetPrivilege (CurrentUser, SystemObjects.PurchasesOrders);
}
<table>
				<tr>
								<th>@Resources.LotNumber</th>
								<th>@Resources.Product</th>
								<th>@Resources.Purchase</th>
								<th>@Resources.QuantitySold</th>
								<th>@Resources.Adjustment</th>
								<th>@Resources.Total</th>
								<th></th>
				</tr>
@foreach (var item in Model.Results.SelectMany(x => x.Details).ToList()) {
				var lot = LotSerialTracking.Queryable.Where(x => x.Reference == item.Id && x.Source == TransactionType.PurchaseOrder).ToList();
				var remaining = lot.Count > 0 ? AbastosInventoryHelpers.AvailableQuantityProduct(lot.First()):0;
				var sold = item.Quantity - remaining;
    <tr>
        <td class="date">@AbastosInventoryHelpers.GetLotNumber(item.Order)</td>
        <td>@Html.DisplayFor(x => item.Product.Name)
        </td>
        <td class='center'>@item.Quantity</td>
								<td class='center'>@sold</td>
								<td class='center'>@remaining</td>
        <td class="actions">
        	@if (Privilege.AllowUpdate && remaining > 0) {
            	@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", title = Resources.Edit })
         }
        </td>
    </tr>
}
</table>
<div class="buttons right">
	<label class='button left'>@Model.ToString()</label>@if (Model.HasPrev) {<a class='button middle icon prev icon-only paging' title='@Resources.PrevPage' href='javascript:void(0)'></a>}@if (Model.HasNext) {<a class='button right icon next icon-only paging' title='@Resources.NextPage' href='javascript:void(0)'></a>}
</div>
<script type="text/javascript">
$('[data-toggle="tooltip"]').tooltip();
$('a.paging').click(function (e) {
	var offset=@Model.Offset;
	
	if($(this).hasClass('next')) {
		offset+=@Model.Limit;
	} else {
		offset-=@Model.Limit;
	}
	
	e.preventDefault();
	$('#activity-indicator').show();
	$('#search-results').hide();
	
	$.post('@Url.Action("Index")', { Pattern: '@Model.Pattern', Offset: offset, Limit: @Model.Limit }, function(data) {
		$('#search-results').html(data);
		$('#search-results').show();
		$('#activity-indicator').hide();
	});
});
</script>