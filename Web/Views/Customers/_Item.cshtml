@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Customer

<tr id='id:@Model.Id'>
    <td>@Html.DisplayFor(x => x.Code)</td>
    <td>@Html.DisplayFor(x => x.Name)</td>
    <td>@Html.DisplayFor(x => x.PriceList.Name)</td>
    <td>@Html.DisplayFor(x => x.CreditLimit)</td>
    <td>@Html.DisplayFor(x => x.CreditDays)</td>
    <td class="actions">
       @if (ViewBag.Privilege.AllowRead) {
        @Html.ActionLink(" ", "Details", new { id = Model.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
       }
        @if (ViewBag.Privilege.AllowUpdate) {
            @Html.ActionLink(" ", "Edit", new { id = Model.Id }, new { @class = "button icon edit icon-only open-modal", title = Resources.Edit, data_modal_id = "customer-modal" })
        }
        @if (ViewBag.Privilege.AllowDelete) {
            @Html.ActionLink(" ", "Delete", new { id = Model.Id }, new { @class = "button icon delete icon-only open-modal", title = Resources.Delete, data_modal_id = "customer-modal" })
        }
    </td>
</tr>



