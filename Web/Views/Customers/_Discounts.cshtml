@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model IEnumerable<CustomerDiscount>

<table>
    <tr>
        <th>@Resources.ProductCode</th>
        <th>@Resources.ProductName</th>
        <th>@Resources.Discount</th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td class="center stretch">@Html.DisplayFor(x => item.Product.Code)</td>
        <td>
        	<span>@Html.DisplayFor(x => item.Product.Name)</span><br/>
		@if (!string.IsNullOrEmpty (item.Product.Model)) {
	        <span class='small muted'>@Resources.Model: @item.Product.Model</span>
        }
        @if (!string.IsNullOrEmpty (item.Product.SKU)) {
	        <span class='small muted'>@Resources.SKU: @item.Product.SKU</span>
        }
        </td>
        <td class="number">
            <a class='editable discount' data-type='text' data-placement='right' data-pk='@item.Id' data-url='@Url.Action("SetDiscount", new { id = item.Id })'>@Html.DisplayFor(x => item.Discount)</a>
        </td>
        <td class='actions'>
            @Html.ActionLink(" ", "RemoveDiscount", new { id = item.Id }, new { @class = "button icon delete icon-only remove", @title = Resources.Delete })
        </td>
    </tr>
}
</table>
<script type='text/javascript'>
bindModal('.open-modal');
</script>
