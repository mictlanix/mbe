@using Business.Essentials
@model Business.Essentials.Model.PriceList

@{
    ViewBag.Title = Resources.Delete;
}

<h2>@Resources.Delete</h2>

<h3>@Resources.Message_DeleteConfirmation</h3>
<fieldset>
    <legend>@Resources.Title_PriceList</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.HighProfitMargin)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.HighProfitMargin)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.LowProfitMargin)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LowProfitMargin)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <button type="submit" class="icon delete">@Resources.Delete</button>
        @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
    </p>
}
