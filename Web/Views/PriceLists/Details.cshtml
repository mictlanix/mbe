@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model PriceList

@{
    ViewBag.Title = Resources.Details;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.PriceLists);
}

<h2>@Resources.Details</h2>

<fieldset>
    <legend>@Resources.Title_PriceList</legend>

    <div class="display-label">
        @Html.LabelFor(x => x.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(x => x.HighProfitMargin)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.HighProfitMargin)
    </div>

    <div class="display-label">
        @Html.LabelFor(x => x.LowProfitMargin)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.LowProfitMargin)
    </div>

</fieldset>
<p>
@if(Privilege.AllowUpdate)
{
    @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.Id }, new { @class = "button icon edit" })
}
    @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
</p>