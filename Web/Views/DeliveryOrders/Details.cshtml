@using Mictlanix.BE
@using Mictlanix.BE.Model;
@using Mictlanix.BE.Web.Helpers;
@model SalesOrder

@{
    ViewBag.Title = Resources.Delivery;
}

<h2>@Resources.Delivery</h2>

<div id="master-section">
	@Html.Partial("_MasterView")
</div>

<div id="details-section">
    <div id="items-container">
        <ul id="items" class="list-items">
        @foreach (var item in Model.Details) {
            @Html.Partial("_DetailView", item) 
        }
        </ul>
    </div>
</div>
<div id="totals-section" class="right floating" style="width:300px;clear:both;">
    @Html.Partial("_Totals")
</div>
<div style="clear:both;"></div>
<div class=" right floating">
    <button type="button" class="icon print">@Resources.Print</button>
    @using (Html.BeginForm("Confirm", "DeliveryOrders", new { id =  Model.Id }, FormMethod.Post, new { style = "display:inline" }))
    {
		<button type="submit" class="icon delivery">@Resources.Delivered</button>
    }
</div>
<div id="back-to-list">
    @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
</div>
<div style="clear:both;"></div>
<script type="text/javascript">
    $(function() {
    	$(".print").off();
        $(".print").printPage({
            url: "@Url.Action("Print", "DeliveryOrders", new { id = Model.Id })"
        });
    });
</script>
