
@using Mictlanix.BE
@using Mictlanix.BE.Web.Models
@using Mictlanix.BE.Model

@model Search<DeliveryOrder>

@{ 
    ViewBag.Title = Resources.Delivered;
}

<h2>@Resources.Delivered</h2>

<div id='master-section'>
    @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "search-results", LoadingElementId = "activity-indicator", OnBegin = "onSearchBegin" }))
    {
        @Html.HiddenFor(x => x.Offset)
        @Html.HiddenFor(x => x.Limit)
        <div class="row">
            <div class="col-sm-7">
                @Html.Editor("Pattern")
            </div>
            <div class="col-sm-1">
                <button class="btn btn-primary btn-block" type="submit">
                    <span class="glyphicon glyphicon-refresh"></span>
                </button>
            </div>
        </div>
    }
</div>
<div id='activity-indicator'>
    <img alt='@Resources.Loading' src='@Url.Content("~/Content/images/loading-bar.gif")' />
</div>
<div id='search-results'>
    @Html.Partial("_PendantDeliveries",Model)
</div>
<style type='text/css'>
    ul.token-input-list {
        width: 100%;
    }
</style>

<style type="text/css">
    .input-group-picker {
        width: 150px;
        margin-bottom: 10px;
    }

    .pull-center {
        margin-left: auto;
        margin-right: auto;
    }
</style>
