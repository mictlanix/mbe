@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model TechnicalServiceReceiptComponent
<tr id='id:@Model.Id'>
    <td class="text-right">@Html.DisplayFor(x => x.Quantity)</td>
    <td>@Html.DisplayFor(x => x.Name)</td>
    <td class="text-center">@Html.DisplayFor(x => x.SerialNumber)</td>
    <td>@Html.DisplayFor(x => x.Comment)</td>
    <td class='actions'>
    	@if(ViewBag.Privilege.AllowUpdate) {
        	@Html.ActionLink(" ", "RemoveComponent", "TechnicalServiceReceipts", new { id = Model.Id }, new { @class = "button icon delete icon-only remove", @title = Resources.Delete })
        }
    </td>
</tr>