@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model Search<FiscalDocument>

@{
    ViewBag.Title = Resources.FiscalDocuments;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.FiscalDocuments);
}

<table>
    <tr>
        <th class="number">@Html.LabelFor(x => new FiscalDocument().Id)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().Customer)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().Batch)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().Serial)</th>
        <th class="date">@Html.LabelFor(x => new FiscalDocument().Issued)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().BillTo)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().IsCompleted)</th>
        <th>@Html.LabelFor(x => new FiscalDocument().IsCancelled)</th>
        <th></th>
    </tr>

@foreach (var item in Model.Results) {
    <tr>
        <td class="number">@Html.DisplayFor(x => item.Id)</td>
        <td>@Html.DisplayFor(x => item.Customer.Name)</td>
        <td class="number center">@Html.DisplayFor(x => item.Batch)</td>
        <td class="number">@Html.DisplayFor(x => item.Serial)</td>
        <td class="date">@Html.DisplayFor(x => item.Issued)</td>
        <td>
        	@Html.DisplayFor(x => item.BillTo.TaxpayerId)
        	@Html.DisplayFor(x => item.BillTo.TaxpayerName)
        </td>
        <td class="bool">@Html.DisplayFor(x => item.IsCompleted)</td>
        <td class="bool">@Html.DisplayFor(x => item.IsCancelled)</td>

        <td class="actions">
        	@if(Privilege.AllowRead)
        	{
            	@Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            	@Html.ActionLink(" ", "Print", new { id = item.Id }, new { @class = "button icon print icon-only", title = Resources.Print, target = "_blank" })
            }
        	@if(Privilege.AllowUpdate && !item.IsCompleted && !item.IsCancelled)
        	{
            	@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            }
        	@if(Privilege.AllowRead && item.IsCompleted)
        	{
            	@Html.ActionLink(" ", "Download", new { id = item.Id }, new { @class = "button icon download icon-only", @title = Resources.Download })
            }
        </td>
    </tr>
}
</table>


<div class="buttons right">
	<label class="button left">@Model.ToString()</label>@if (Model.HasPrev) {<a class="button middle icon prev icon-only" title="@Resources.PrevPage" href="javascript:void(0)"></a>}@if (Model.HasNext) {<a class="button right icon next icon-only" title="@Resources.NextPage" href="javascript:void(0)"></a>}
</div>
@if (Model.HasPrev)
{
<script type="text/javascript">
    $(function () {
        $('a.prev').click(function (e) {
            e.preventDefault();
            $("#activity-indicator").show();
            $("#search-results").hide();
            $.post('@Url.Action("Index")', { Pattern: "@Model.Pattern", Offset: "@(Model.Offset-Model.Limit)", Limit: "@Model.Limit" }, function (data) {
                $("#search-results").html(data);
                $("#search-results").show();
                $("#activity-indicator").hide();
            });
        });
    });
</script>
}
@if (Model.HasNext)
{
<script type="text/javascript">
    $(function () {
        $('a.next').click(function (e) {
            e.preventDefault();
            $("#activity-indicator").show();
            $("#search-results").hide();
            $.post('@Url.Action("Index")', { Pattern: "@Model.Pattern", Offset: "@(Model.Offset+Model.Limit)", Limit: "@Model.Limit" }, function (data) {
                $("#search-results").html(data);
                $("#search-results").show();
                $("#activity-indicator").hide();
            });
        });
    });
</script>
}
