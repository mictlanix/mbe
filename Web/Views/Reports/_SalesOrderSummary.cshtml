@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model IEnumerable<SalesOrder>

<table class='table table-condensed'>
	<thead>
	    <tr>
	        <th class='nowrap center'>@Resources.Date</th>
	        <th class='nowrap center'>@Resources.SalesPerson</th>
	        <th class='nowrap center'>@Resources.SalesOrder</th>
	        <th class='center'>@Resources.FiscalDocument</th>
	        <th class='center'>@Resources.DueDate</th>
	        <th class='nowrap center'>@Resources.Customer</th>
	        <th class='nowrap center'>@Resources.Total</th>
	        <th class='nowrap center'></th>
	    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td class='date'>@Html.DisplayFor(x => item.Date)</td>
        <td class='nowrap'>@Html.DisplayFor(x => item.SalesPerson.Name)</td>
        <td class='number'>@Html.DisplayFor(x => item.Id)</td>
        <td class='date'>@item.InvoiceSerials()</td>
        <td class='date'>@Html.DisplayFor(x => item.DueDate)</td>
        <td>@Html.DisplayFor(x => item.Customer.Name)</td>
        <td class='currency'>@Html.DisplayFor(x => item.TotalEx)</td>
    @if (item.Currency == Configuration.BaseCurrency) {
        <td class='currency'></td>
    } else {
        <td class='currency'>@Html.DisplayFor(x => item.Total) @Html.DisplayFor(x => item.Currency)</td>
    }
    </tr>
}
    </tbody>
</table>
