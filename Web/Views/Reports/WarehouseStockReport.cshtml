@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model DateRange

@{
    ViewBag.Title = Resources.WarehouseStockReport;
}

<h2>@Resources.WarehouseStockReport</h2>

<div id="master-section">
@using (Ajax.BeginForm (new AjaxOptions { UpdateTargetId = "search-results", LoadingElementId = "activity-indicator", OnBegin = "onSearchBegin" })) {
    <div class="row">
        <div class="col-xs-12">
            <label for="warehouse">@Resources.Warehouse</label>
            @Html.Editor("warehouse", "WarehouseSelector")
        </div>
        <div class="col-xs-3">
            <label for="brand">@Resources.Brand</label>
            @Html.Editor("brand", "ProductBrandSelector")
        </div>
        <div class="col-xs-3">
            <label for="productModel">@Resources.Model</label>
            @Html.Editor("productModel", "ProductModelSelector")
        </div>
        <div class="col-xs-3">
            <label for="label">@Resources.Labels</label>
            @Html.Editor("label", "LabelSelector")
        </div>
        <div class="col-xs-2">
            <label>&nbsp;</label>
            <div class="form-group">
                <label for="showZeroInventory">
                    @Html.CheckBox("showZeroInventory", false)
                    @Resources.ZeroInventory
                </label>
            </div>
        </div>
        <div class="col-xs-1">
            <label for="product">&nbsp;</label>
            <button class="btn btn-primary btn-block" type="submit">
                <span class="glyphicon glyphicon-refresh"></span>
            </button>
        </div>
    </div>
}
</div>
<div id="activity-indicator">
    <img alt="@Resources.Loading" src="@Url.Content("~/Content/images/loading-bar.gif")" />
</div>
<div id="search-results">
</div>
<style type="text/css">
ul.token-input-list { width: 100%; }
</style>