@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model MasterDetails<Warehouse, Kardex>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Kardex);
}

<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Kardex().Product)
        </th>
        <th>
            @Html.LabelFor(x => new Kardex().Quantity)
        </th>
        <th></th>
        
    </tr>
@foreach (var item in Model.Details)
{
    <tr>
        <td>
            @Html.DisplayFor(x => item.Product.Name)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Quantity)
        </td>
        <td class="actions">
            @Html.ActionLink(" ", "KardexDetails", new { warehouse = Model.Master.Id, product = item.Product.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
        </td>
    </tr> 
}
</table>