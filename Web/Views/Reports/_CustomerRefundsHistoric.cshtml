@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model Search<CustomerRefund>

@{
    ViewBag.Title = Resources.CustomerRefundsHistoric;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.CustomerRefundsHistoric);
}

<table>
        <tr>
            <th>@Html.LabelFor(x => new CustomerRefund().Id)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().CreationTime)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().SalesOrder.Customer)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().SalesPerson)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().Creator)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().SalesOrder)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().IsCompleted)</th>
            <th>@Html.LabelFor(x => new CustomerRefund().IsCancelled)</th>
            <th></th>
        </tr>
    @foreach (var item in Model.Results)
    {
        <tr>
            <td class="number">@Html.DisplayFor(x => item.Id)</td>
            <td class="date">@Html.DisplayFor(x => item.CreationTime)</td>
            <td>@Html.DisplayFor(x => item.SalesOrder.Customer.Name)</td>
            <td>@Html.DisplayFor(x => item.SalesPerson.Name)</td>
            <td>@Html.DisplayFor(x => item.Creator.Name)</td>
            <td class="number">@Html.DisplayFor(x => item.SalesOrder.Id)</td>
            <td class="bool">@Html.DisplayFor(x => item.IsCompleted)</td>
            <td class="bool">@Html.DisplayFor(x => item.IsCancelled)</td>
            <td class="actions">
        	    @if(Privilege.AllowRead)
        	    {
            	    @Html.ActionLink(" ", "HistoricDetails", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
                }
            </td>
    </tr>
}

</table>

<div class="buttons right">
	<label class="button left">@Model.ToString()</label>@if (Model.HasPrev) {<a class="button middle icon prev icon-only" title="@Resources.PrevPage" href="javascript:void(0)"></a>}@if (Model.HasNext) {<a class="button right icon next icon-only" title="@Resources.NextPage" href="javascript:void(0)"></a>}
</div>
@if (Model.HasPrev)
{
<script type="text/javascript">
    $(function () {
        $('a.prev').click(function (e) {
            e.preventDefault();
            $("#activity-indicator").show();
            $("#search-results").hide();
            $.post('@Url.Action("Historic")', { EndDate: "@ViewBag.CustomerRefundDates.EndDate", StartDate: "@ViewBag.CustomerRefundDates.StartDate", Pattern: "@Model.Pattern", Offset: "@(Model.Offset-Model.Limit)", Limit: "@Model.Limit" }, function (data) {
                $("#search-results").html(data);
                $("#search-results").show();
                $("#activity-indicator").hide();
            });
        });
    });
</script>
}
@if (Model.HasNext)
{
<script type="text/javascript">
    $(function () {
        $('a.next').click(function (e) {
            e.preventDefault();
            $("#activity-indicator").show();
            $("#search-results").hide();
            $.post('@Url.Action("Historic")', { EndDate: "@ViewBag.CustomerRefundDates.EndDate", StartDate: "@ViewBag.CustomerRefundDates.StartDate", Pattern: "@Model.Pattern", Offset: "@(Model.Offset+Model.Limit)", Limit: "@Model.Limit" }, function (data) {
                $("#search-results").html(data);
                $("#search-results").show();
                $("#activity-indicator").hide();
            });
        });
    });
</script>
}
