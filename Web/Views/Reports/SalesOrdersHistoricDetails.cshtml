@using Mictlanix.BE
@using Mictlanix.BE.Model;
@using Mictlanix.BE.Web.Helpers;
@model SalesOrder

<h2>@Resources.Details</h2>

<div id="master-section">
	@Html.Partial("../Sales/_MasterView")
</div>

<div id="details-section">
    <div id="items-container">
        <ul id="items" class="list-items">
        @foreach (var item in Model.Details)
        {
            @Html.Partial("../Sales/_DetailView", item) 
        }
        </ul>
    </div>
</div>
<div id="totals-section" class="right floating" style="width:300px">
    @Html.Partial("../Sales/_Totals")
</div>

<div id="back-to-list" style="clear:both">
    @Html.ActionLink(Resources.BackToList, "SalesOrdersHistoric", new { }, new { @class = "button icon back" })
</div>

