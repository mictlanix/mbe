@using Business.Essentials
@model Business.Essentials.Model.BankAccount

@{
    ViewBag.Title = Resources.Delete;
}

<h2>@Resources.Delete</h2>

<h3>@Resources.Message_DeleteConfirmation</h3>
<fieldset>
    <legend>@Resources.Title_BankAccount</legend>

        <div class="display-label">
            @Html.LabelFor(model => model.BankName)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.BankName)
        </div>
        <div class="display-label">
            @Html.LabelFor(model => model.AccountNumber)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.AccountNumber)
        </div>
        <div class="display-label">
            @Html.LabelFor(model => model.Reference)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Reference)
        </div>
        <div class="display-label">
            @Html.LabelFor(model => model.RoutingNumber)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.RoutingNumber)
        </div>
        <div class="display-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Comment)
        </div>

</fieldset>
@using (Html.BeginForm()) {
    @Html.Hidden("OwnerId", (object)ViewBag.OwnerId)
    <p>
        <button type="submit" class="icon delete">@Resources.Delete</button>
        @Html.ActionLink(Business.Essentials.Resources.BackToList, "Details", "Suppliers", new { id = ViewBag.OwnerId }, new { @class = "button icon back" })
    </p>
}
