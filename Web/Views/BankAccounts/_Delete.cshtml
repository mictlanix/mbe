@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model BankAccount

<div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>&times;</button>
    <h3>@Resources.BankName</h3>
</div>
<div class='modal-body'>
    @using (Ajax.BeginForm (null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "bankAccount-modal" }, new { @class = "modal-form" })) {
        <div class="form-horizontal">
            @Html.Hidden("OwnerId", (object) ViewBag.OwnerId)
            @Html.DisplayForModel()
        </div>
    }
</div>
<div class='modal-footer'>
    <button type='button' class='btn btn-default' data-dismiss='modal'>@Resources.Discard</button>
    <button type='submit' class='btn btn-danger' onclick='$("#bankAccount-modal form").submit();'>@Resources.Delete</button>
</div>


