@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model ExchangeRate

<tr id='id:@Model.Id'>
    <td class='date'>@Html.DisplayFor(x => x.Date)</td>
    <td class='right'>1 @Html.DisplayFor(x => x.Base)</td>
    <td class='right'>@Html.DisplayFor(x => x.Rate) @Html.DisplayFor(x => x.Target)</td>
    <td class="actions">
        @if (ViewBag.Privilege.AllowDelete) {
            @Html.ActionLink(" ", "Delete", new { id = Model.Id }, new { @class = "button icon delete icon-only open-modal", @title = Resources.Delete, data_modal_id = "exchangeRate-modal" })
        }
    </td>
</tr>