@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Web.Models
@model Search<ExchangeRate>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.ExchangeRates);
}

<p>@Html.ValidationMessageFor(x => x.Pattern)</p>

<table>
    <tr>
        <th class='date'>@Html.LabelFor(x => new ExchangeRate ().Date)</th>
        <th class=''>@Html.LabelFor(x => new ExchangeRate ().Base)</th>
        <th class=''>@Html.LabelFor(x => new ExchangeRate ().Target)</th>
        <th class='actions'></th>
    </tr>
@foreach (var item in Model.Results) {
    <tr>
        <td class='date'>@Html.DisplayFor(x => item.Date)</td>
        <td class='right'>1 @Html.DisplayFor(x => item.Base)</td>
        <td class='right'>@Html.DisplayFor(x => item.Rate) @Html.DisplayFor(x => item.Target)</td>
        <td class="actions">
    	@if(Privilege.AllowDelete) {
        	@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
        }
        </td>
    </tr>
}
</table>
<div class="buttons right">
	<label class="button left">@Model.ToString()</label>@if (Model.HasPrev) {<a class="button middle icon prev icon-only paging" title="@Resources.PrevPage" href="javascript:void(0)"></a>}@if (Model.HasNext) {<a class="button right icon next icon-only paging" title="@Resources.NextPage" href="javascript:void(0)"></a>}
</div>
<script type="text/javascript">
    $(function () {
    	$('a.paging').click(function (e) {
  			var offset=@Model.Offset;
    		
  			if($(this).hasClass('next')) {
  				offset+=@Model.Limit;
  			} else {
  				offset-=@Model.Limit;
  			}
  			
    		e.preventDefault();
    		$("#activity-indicator").show();
    		$("#search-results").hide();
    		
    		$.post('@Url.Action("Index")', { Pattern: '@Model.Pattern', Offset: offset, Limit: @Model.Limit }, function(data) {
				$('#search-results').html(data);
				$('#search-results').show();
				$('#activity-indicator').hide();
			});
    	});
    });
</script>
