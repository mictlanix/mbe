@using Mictlanix.BE
@using Mictlanix.BE.Model

@model Expense

<div class='modal-header'>
	<button type='button' class='close' data-dismiss='modal'>&times;</button>
	<h3>@Resources.Expenses</h3>
</div>
<div class='modal-body'>
@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "expense-modal-content" }
                        , new { @class = "modal-form" })){

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

	<div class="form-horizontal">
	@Html.LabelFor(x => x.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-xs-4">
            @Html.TextBoxFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger"})
        </div>
	</div>
    <div class="form-horizontal">
        @Html.LabelFor(x => x.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-xs-4">
            @Html.TextAreaFor(x => x.Comment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Comment, "", new { @class = "text-danger" })
        </div>
    </div>
}
</div>
<div class="clear"></div>
<div class='modal-footer'>
	<button type='button' class='btn btn-default' data-dismiss='modal'>@Resources.Discard</button>
	<button type='submit' class='btn btn-primary' onclick='$("#expense-modal form").submit();'>@Resources.Save</button>
</div>
