@using Business.Essentials
@using Business.Essentials.Model
@using Business.Essentials.WebApp.Helpers
@model CashSession

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.CustomerPayments);
}

<fieldset>
    <legend>@Resources.DisplayName_CashSession</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.CashDrawer) :
        @Html.DisplayFor(model => model.CashDrawer.Name)
    </div>
    
    <div class="display-label">
        @Html.LabelFor(model => model.Cashier) :
        @Html.DisplayFor(model => model.Cashier.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Start) :
        @Html.DisplayFor(model => model.Start)
    </div>

    @if(Privilege.AllowDelete)
    {
	    if (ViewBag.ShowCloseSession)
	    {
	        <div class="right floating">
	            @Html.ActionLink(Resources.CloseSession, "CloseSession", new { }, new { @class = "button" })
	        </div>
	    }
    }
</fieldset>
