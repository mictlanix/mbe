@using Mictlanix.BE
@using Mictlanix.BE.Web.Helpers
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Models
@model CustomerPayment

<h2>@Resources.DisplayName_PaymentSuccesful</h2>

<div class="row-fluid">
    <div class="span12">@Html.LabelFor(x => x.Customer)</div>
</div>
<div class="row-fluid">
	<div class="span12">@Html.DisplayFor(x => x.Customer.Name)</div>
</div>
<div class="row-fluid">
  	<div class="span3">@Html.LabelFor(x => x.Amount)</div>
	<div class="span3">@Html.LabelFor(x => x.Method)</div>
	<div class="span3">@Html.LabelFor(x => x.Reference)</div>
</div>
<div class="row-fluid">
  	<div class="span3">@Html.DisplayFor(x => x.Amount)</div>
	<div class="span3">@Model.Method.GetDisplayName()</div>
	<div class="span3">@Html.DisplayFor(x => x.Reference)</div>
</div>
<div id="back-to-list" class='pull-right'>
    @Ajax.ActionLink(Resources.BackToList, "CreditPayment", "Payments", new { }, new AjaxOptions { UpdateTargetId = "credit-payment" }, new { @class = "button icon back" })
</div>
<div class='clearfix'></div>
