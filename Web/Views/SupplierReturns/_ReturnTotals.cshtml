@using Business.Essentials
@using Business.Essentials.WebApp.Helpers
@model Business.Essentials.Model.SupplierReturn

<div class="right">

    <div class="display-label" style="display:inline" >
        <b>@Html.LabelFor(x => x.Subtotal):</b>
        @Html.DisplayFor(x => x.Subtotal)
    </div>
    <div class="display-label" style="display:inline-block" >
        <b>@Html.LabelFor(x => x.Taxes):</b>
        @Html.DisplayFor(x => x.Taxes)
    </div>
    <div class="display-label" style="display:inline-block" >
        <b>@Html.LabelFor(x => x.Total):</b>
        @Html.DisplayFor(x => x.Total)
    </div>
    <p></p>
</div>
<div id="confirm" class="right floating">
    @if (Model.Total > 0)
    {
        using (Html.BeginForm("ConfirmReturn", "SupplierReturns", new { id = Model.Id }))
        {
            <button type="submit" class="icon lock">@Resources.Complete</button>
        }
    }
</div>

