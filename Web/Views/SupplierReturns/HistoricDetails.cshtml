@using Mictlanix.BE
@using Mictlanix.BE.Web.Helpers;
@using Mictlanix.BE.Model;
@model Mictlanix.BE.Model.SupplierReturn

 @{
    ViewBag.Title = Resources.Details;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.SupplierReturnHistoric);    
}

<h2>@Resources.Details</h2>

<fieldset>
    <legend>@Resources.Title_SupplierReturn</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.Id) @Html.Label(":")
        @Html.DisplayFor(model => model.Id)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.CreationTime) @Html.Label(":")
        @Html.DisplayFor(model => model.CreationTime)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Creator) @Html.Label(":")
        @Html.DisplayFor(model => model.Creator.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.PurchaseOrder) @Html.Label(":")
        @Html.DisplayFor(model => model.PurchaseOrder.Id)
    </div>

</fieldset>

<fieldset>
    <legend>@Mictlanix.BE.Resources.DisplayName_SupplierReturnDetails</legend>
    @Html.Partial("_SupplierReturnDetails", Model.Details)
</fieldset>
<div class='clearfix'></div>
<div id='back-to-list' class='pull-left'>
    @Html.ActionLink(Resources.BackToList, "Historic", new { }, new { @class = "button icon back" })
</div>
<div class='pull-right'>
	@Html.ActionLink(Resources.Print, "Print", new { id = Model.Id }, new { @class = "button icon print", target = "_blank" })
</div>
<div class='clearfix'></div>