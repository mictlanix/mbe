@using Mictlanix.BE
@model Mictlanix.BE.Model.Address

@{
    ViewBag.Title = Resources.CreateNew;
}

<h2>@Mictlanix.BE.Resources.Create</h2>

@using (Html.BeginForm("Create", "Addresses"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.Title_Address</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaxpayerId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaxpayerId)
            @Html.ValidationMessageFor(model => model.TaxpayerId)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.TaxpayerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaxpayerName)
            @Html.ValidationMessageFor(model => model.TaxpayerName)
        </div>

		@Html.EditorForModel()

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
        </div>
        
        @Html.Hidden("OwnerId", (object)ViewBag.OwnerId)
        @Html.Hidden("OwnerType", (object)ViewBag.OwnerType)

        <p><button type="submit" class="icon save">@Resources.Create</button></p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.BackToList, "Details", (string)ViewBag.OwnerType, new { id = ViewBag.OwnerId }, new { @class = "button icon back" })
</div>
