@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model PointOfSale

<div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>&times;</button>
    <h3>@Resources.PointOfSale</h3>
</div>
<div class='modal-body'>
    @using(Ajax.BeginForm (null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "pointOfSale-modal" }, new { @class = "modal-form" })) {
        @Html.ValidationSummary(true)
        <div style='overflow:hidden'>
            @Html.EditorForModel()
        </div>
        <script type="text/javascript">$('#Id').attr('readonly', true);</script>
    }
</div>
<div class='modal-footer'>
    <button type='button' class='btn' data-dismiss='modal'>@Resources.Discard</button>
    <button type='submit' class='btn btn-primary' onclick='$("#pointOfSale-modal form").submit();'>@Resources.Save</button>
</div>

