@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model IEnumerable<Contact>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Contacts);
}

<table>
    <tr>
        <th>@Html.LabelFor(x => new Contact().Name)</th>
        <th>@Html.LabelFor(x => new Contact().Email)</th>
        <th>@Html.LabelFor(x => new Contact().Phone)</th>
        <th>@Html.LabelFor(x => new Contact().PhoneExt)</th>
        <th>@Html.LabelFor(x => new Contact().Mobile)</th>
        <th>@Html.LabelFor(x => new Contact().Fax)</th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td class='stretch'>@Html.DisplayFor(modelItem => item.Email)</td>
        <td class='right'>@Html.DisplayFor(modelItem => item.Phone)</td>
        <td class='right'>@Html.DisplayFor(modelItem => item.PhoneExt)</td>
        <td class='right'>@Html.DisplayFor(modelItem => item.Mobile)</td>
        <td class='right'>@Html.DisplayFor(modelItem => item.Fax)</td>
        <td class='actions'>
        	@if(Privilege.AllowUpdate) {
            	@Html.ActionLink(" ", "Edit", "Contacts", new { id = item.Id }, new { @class = "button icon edit icon-only openDialog", @title = Resources.Edit, data_dialog_id = "contactDlg", data_dialog_title = Resources.Edit })
            }
        	@if(Privilege.AllowRead) {
            	@Html.ActionLink(" ", "Details", "Contacts", new { id = item.Id }, new { @class = "button icon view icon-only openDialog", @title = Resources.Details, data_dialog_id = "contactDlg", data_dialog_title = Resources.Details })
            }
        	@if(Privilege.AllowDelete) {
            	@Html.ActionLink(" ", "Delete", "Contacts", new { id = item.Id }, new { @class = "button icon delete icon-only openDialog", @title = Resources.Delete, data_dialog_id = "contactDlg", data_dialog_title = Resources.Delete })
            }
        </td>
    </tr>
}
</table>
<script type='text/javascript'>
	bindOpenDialog('.openDialog');
</script>