    <div class="display-label">
        @Html.LabelFor(model => model.Sip)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Sip)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Birthday)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Birthday)
    </div>

   <div class="display-label">
        @Html.LabelFor(model => model.Comment)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Comment)
    </div>

    @Html.Hidden("OwnerId", (object)ViewBag.OwnerId)
    @Html.Hidden("OwnerType", (object)ViewBag.OwnerType)

</fieldset>
<p>
@if(Privilege.AllowUpdate)
{
    @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.Id }, new { @class = "button icon edit" })
}
    @Html.ActionLink(Resources.BackToList, "Details", (string)ViewBag.OwnerType, new { id = ViewBag.OwnerId }, new { @class = "button icon back" })
</p>