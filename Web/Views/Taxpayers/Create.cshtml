@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Taxpayer

@{
    ViewBag.Title = Resources.CreateNew;
}

<h2>@Resources.Create</h2>

@using (Html.BeginForm("Create", "Taxpayers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.Title_Taxpayer</legend>

        <div class="editor-label">
            @Html.LabelFor(x => x.Id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Id)
            @Html.ValidationMessageFor(x => x.Id)
        </div>

		<div class="editor-label">
            @Html.LabelFor(x => x.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Regime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Regime)
            @Html.ValidationMessageFor(model => model.Regime)
        </div>
        
		@Html.EditorFor(x => x.Address)
		@Html.HiddenFor(x => x.Address.TaxpayerId)
		@Html.HiddenFor(x => x.Address.TaxpayerName)

		<div class="editor-label">
            @Html.LabelFor(x => x.CertificateNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.CertificateNumber)
            @Html.ValidationMessageFor(x => x.CertificateNumber)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(x => x.CertificateData)
        </div>
        <div class="editor-input">
            <input type="file" name="files" id="cerFile" />
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(x => x.KeyData)
        </div>
        <div class="editor-input">
            <input type="file" name="files" id="keyFile" />
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(m => m.KeyPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.KeyPassword2)
        </div>
            
        <p><button type="submit" class="icon save">@Resources.Create</button></p>
    </fieldset>
}
<div>
	@Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
</div>