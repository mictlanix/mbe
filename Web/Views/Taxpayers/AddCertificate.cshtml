@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model TaxpayerCertificate

@{
    ViewBag.Title = Resources.CreateNew;
}

<h2>@Resources.Create</h2>

@using (Html.BeginForm("AddCertificate", "Taxpayers", new { Id = 0 } , FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.Certificate</legend>
        
        @Html.HiddenFor(x => x.TaxpayerId)
        
        <div class="editor-label">
            @Html.LabelFor(x => x.CertificateData)
        </div>
        <div class="editor-input">
            <input type="file" name="files" id="cerFile" />
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(x => x.KeyData)
        </div>
        <div class="editor-input">
            <input type="file" name="files" id="keyFile" />
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(m => m.KeyPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.KeyPassword2)
            @Html.ValidationMessageFor(x => x.KeyPassword)
        </div>
        
        <p><button type="submit" class="icon save">@Resources.Create</button></p>
    </fieldset>
}
<div id="back-to-list">
    @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
</div>