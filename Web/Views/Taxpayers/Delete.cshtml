@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Taxpayer

@{
    ViewBag.Title = Resources.Delete;
}

<h2>@Resources.Delete</h2>

<h3>@Resources.Message_DeleteConfirmation</h3>
<fieldset>
    <legend>@Resources.Title_Taxpayer</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.Id)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Id)
    </div>
    
    <div class="display-label">
        @Html.LabelFor(x => x.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(x => x.Regime)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.Regime)
    </div>

	@Html.DisplayFor(x => x.Address)

    <div class="display-label">
        @Html.LabelFor(x => x.CertificateNumber)
    </div>
    <div class="display-field">
        @Html.DisplayFor(x => x.CertificateNumber)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <button type="submit" class="icon delete">@Resources.Delete</button>
        @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
    </p>
}
