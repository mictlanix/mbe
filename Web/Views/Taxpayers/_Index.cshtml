@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model IEnumerable<Taxpayer>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Taxpayers);
}

<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Taxpayer().Id)
        </th>
        <th>
            @Html.LabelFor(x => new Taxpayer().Name)
        </th>
        <th>
            @Html.LabelFor(x => new Address ().Street)
        </th>
        <th>
            @Html.LabelFor(x => new Address ().Neighborhood)
        </th>
        <th>
            @Html.LabelFor(x => new Address ().State)
        </th>
         <th>
            @Html.LabelFor(x => new Address ().PostalCode)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="number">@Html.DisplayFor(x => item.Id)</td>
        <td>@Html.DisplayFor(x => item.Name)</td>
        <td>
            @Html.DisplayFor(x => item.Address.Street)
            @Html.DisplayFor(x => item.Address.ExteriorNumber)
            @Html.DisplayFor(x => item.Address.InteriorNumber)
        </td>
        <td>@Html.DisplayFor(x => item.Address.Neighborhood)</td>
        <td>@Html.DisplayFor(x => item.Address.State)</td>
        <td class="number">@Html.DisplayFor(x => item.Address.PostalCode)</td>
        <td class="actions">
        	@if(Privilege.AllowRead)
        	{
            	@Html.ActionLink(" ", "Details", "Taxpayers", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            }
        	@if(Privilege.AllowUpdate)
        	{
            	@Html.ActionLink(" ", "Edit", "Taxpayers", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            }
        	@if(Privilege.AllowDelete)
        	{
            	@Html.ActionLink(" ", "Delete", "Taxpayers", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
            }
        </td>
    </tr>
}
</table>