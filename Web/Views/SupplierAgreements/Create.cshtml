@using Business.Essentials
@model Business.Essentials.Model.SupplierAgreement

@{
    ViewBag.Title = Resources.CreateNew;
}

<h2>@Resources.Create</h2>

@using (Html.BeginForm("Create", "SupplierAgreements")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.Title_SupplierAgreement</legend>
        
        @Html.HiddenFor(model => model.SupplierId)

        <div class="display-label">
            @Html.LabelFor(model => model.Supplier)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Supplier.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Start)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Start)
            @Html.ValidationMessageFor(model => model.Start)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.End)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.End)
            @Html.ValidationMessageFor(model => model.End)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
        </div>

        <p><button type="submit" class="icon save">@Resources.Create</button></p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.BackToList, "Details", "Suppliers", new { id = Model.Supplier.Id }, new { @class = "button icon back" })
</div>