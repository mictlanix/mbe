@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model SupplierAgreement

<div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>&times;</button>
    <h3>@Resources.SupplierAgreement</h3>
</div>
<div class='modal-body'>
    @using(Ajax.BeginForm (null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "supplierAgreement-modal" }, new { @class = "modal-form" })) {
        @Html.ValidationSummary(true)
        <div class="form-horizontal">
           
            @Html.EditorForModel()
        </div>
    }
</div>
<div class='modal-footer'>
    <button type='button' class='btn btn-default' data-dismiss='modal'>@Resources.Discard</button>
    <button type='submit' class='btn btn-primary' onclick='$("#supplierAgreement-modal form").submit();'>@Resources.Save</button>
</div>

