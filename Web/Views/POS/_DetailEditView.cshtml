@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model SalesOrderDetail

<li id="item@(Model.Id)">
    <div class="photo">
        <img src="@Url.Content(Model.Product.Photo)" title="@Model.ProductName" />
    </div>
    <div class="action-link">
        <a class="button icon-only icon delete" title="@Resources.Delete" href='@Url.Action("RemoveDetail")/@Model.Id'></a>
        <script type="text/javascript">
            $("#item@(Model.Id) a.delete").click(function(event){
                event.preventDefault();
                removeItem(@Model.Id);
            });
        </script>
    </div>
    <div class="info">
        <b>@Model.ProductName</b><br/>
        <b>@Resources.Code:</b> @Model.ProductCode
        <b>@Resources.Model:</b> @Model.Product.Model
        @if(!string.IsNullOrEmpty(Model.Product.SKU)) {
        <b>@Resources.SKU:</b> @Model.Product.SKU
        }
        @if(Model.ExchangeRate != 1m) {
        <b>@Resources.ExchangeRate:</b> @Html.DisplayFor(x => x.ExchangeRate)
        }
        <br/>
        <b>@Resources.Price:</b> @Html.DisplayFor(x => x.Price) @Html.DisplayFor(x => x.Currency)
        <b>@Resources.Quantity:</b>
        <div class="editable quantity">@Model.Quantity.ToString("0.####")</div>
        <b>@Resources.Discount:</b>
        <div class="editable discount">@Model.Discount.ToString("p")</div>
        <b>@Resources.TaxRate:</b> @Html.DisplayFor(x => x.TaxRate)
        <b>@Resources.Amount:</b>
        <strong class="total">@Html.DisplayFor(x => x.Total) @Configuration.BaseCurrency</strong>
    </div>
</li>