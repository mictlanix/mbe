@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model InventoryReceipt

<tr id='id:@Model.Id'>
    <td class="number">@Html.DisplayFor(x => x.Id)</td>
    <td class="date">@Html.DisplayFor(x => x.CreationTime)</td>
    <td>@Html.DisplayFor(x => x.Warehouse.Name)</td>
    <td class="number">@Html.DisplayFor(x => x.Order.Id)</td>
    <td class="bool">@Html.DisplayFor(x => x.IsCompleted)</td>
    <td class="bool">@Html.DisplayFor(x => x.IsCancelled)</td>
    <td class="actions">
        @Html.ActionLink(" ", "Receipt", new { id = Model.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
        @if (ViewBag.Privilege.AllowUpdate && !Model.IsCompleted && !Model.IsCancelled) {
            @Html.ActionLink(" ", "EditReceipt", new { id = Model.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
        }
    </td>
</tr>



