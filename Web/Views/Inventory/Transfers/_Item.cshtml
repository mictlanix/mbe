@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model InventoryTransfer

<tr id='id:@Model.Id'>
    <td class="number">
		@Html.DisplayFor(x => x.Id)
    	<a href="javascript:void(0)" data-toggle="tooltip" title="@Resources.Serial @Html.DisplayFor(x => x.Serial)">
			<span class="glyphicon glyphicon-exclamation-sign"></span>
		</a>
	</td>
    <td class="date">@Html.DisplayFor(x => x.CreationTime)</td>
    <td>@Html.DisplayFor(x => x.From.Name)</td>
    <td>@Html.DisplayFor(x => x.To.Name)</td>
    <td class="bool">@Html.DisplayFor(x => x.IsCompleted)</td>
    <td class="bool">@Html.DisplayFor(x => x.IsCancelled)</td>
    <td class="actions">
        @Html.ActionLink(" ", "Transfer", new { id = Model.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
        @if (ViewBag.Privilege.AllowUpdate && !Model.IsCompleted && !Model.IsCancelled) {
            @Html.ActionLink(" ", "EditTransfer", new { id = Model.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
        }
    </td>

</tr>

