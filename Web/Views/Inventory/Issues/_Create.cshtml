@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Models
@using Mictlanix.BE.Web.Helpers
@model InventoryIssue

<div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>&times;</button>
    <h3>@Resources.InventoryIssue</h3>
</div>
<div class='modal-body'>
    @using (Ajax.BeginForm (null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "inventoryIssue-modal" }, new { @class = "modal-form" })) {
        @Html.ValidationSummary(true)
        <div style='overflow:hidden'>
            @Html.EditorForModel()
        </div>
    }
</div>
<div class='modal-footer'>
    <button type='button' class='btn' data-dismiss='modal'>@Resources.Discard</button>
    <button type='submit' class='btn btn-primary' onclick='$("#inventoryIssue-modal form").submit();'>@Resources.Create</button>
</div>


