@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Models
@model InventoryReceiptDetail

<li id="item@(Model.Id)">
    <div class="photo">
        <img src="@Url.Content(Model.Product.Photo)" title="@Model.ProductName" />
    </div>
    <div class="action-link">
        <a class="button icon-only icon delete" title="@Resources.Delete" href='@Url.Action("Issues")/@Model.Id'></a>
        <script type="text/javascript">
            $("#item@(Model.Id) a.delete").click(function(event){
                event.preventDefault();
                removeItem(@Model.Id);
            });
        </script>
    </div>
    <div class="info">
        <b>@Model.ProductName</b><br/>
        <b>@Resources.Code:</b> @Model.ProductCode
        <b>@Resources.Model:</b> @Model.Product.Model
        <b>@Resources.SKU:</b> @Model.Product.SKU<br/>
        @if(@Model.QuantityOrdered > 0) {
        <b>@Resources.QuantityOrdered:</b> @Model.QuantityOrdered.ToString("0.####")
        <b>@Resources.QuantityDelivered:</b>
        } else {
        <b>@Resources.Quantity:</b>
        }
        <div class="editable quantity">@Model.Quantity.ToString("0.####")</div>
        &nbsp;
    </div>
</li>
