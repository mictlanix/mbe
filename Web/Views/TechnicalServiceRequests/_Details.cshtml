@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model TechnicalServiceRequest

<fieldset>
    <legend>@Model.Type.GetDisplayName()</legend>

	<div class="row-fluid">
	  	<div class="span3">@Html.LabelFor(x => x.Brand)</div>
	  	<div class="span3">@Html.LabelFor(x => x.Equipment)</div>
	  	<div class="span3">@Html.LabelFor(x => x.Model)</div>
	  	<div class="span3">@Html.LabelFor(x => x.SerialNumber)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.Brand)</div></div>
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.Equipment)</div></div>
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.Model)</div></div>
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.SerialNumber)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span3">@Html.LabelFor(x => x.Date)</div>
		<div class="span6">@Html.LabelFor(x => x.Location)</div>
	  	<div class="span3">@Html.LabelFor(x => x.EndDate)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.Date)</div></div>
	  	<div class="span6"><div class="ro-field">@Html.DisplayFor(x => x.Location)</div></div>
	  	<div class="span3"><div class="ro-field">@Html.DisplayFor(x => x.EndDate)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span6">@Html.LabelFor(x => x.Customer)</div>
	  	<div class="span6">@Html.LabelFor(x => x.ResponsiblePerson)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span6"><div class="ro-field">@Html.DisplayFor(x => x.Customer, "String")</div></div>
	  	<div class="span6"><div class="ro-field">@Html.DisplayFor(x => x.ResponsiblePerson)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span12">@Html.LabelFor(x => x.Comment)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span12"><div class="ro-field">@Html.DisplayFor(x => x.Comment)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span6">@Html.LabelFor(x => x.ContactName)</div>
	  	<div class="span2">@Html.LabelFor(x => x.ContactPhoneNumber)</div>
	  	<div class="span2">@Html.LabelFor(x => x.PaymentStatus)</div>
	  	<div class="span2">@Html.LabelFor(x => x.ShippingMethod)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span6"><div class="ro-field">@Html.DisplayFor(x => x.ContactName)</div></div>
	  	<div class="span2"><div class="ro-field">@Html.DisplayFor(x => x.ContactPhoneNumber)</div></div>
	  	<div class="span2"><div class="ro-field">@Html.DisplayFor(x => x.PaymentStatus)</div></div>
	  	<div class="span2"><div class="ro-field">@Html.DisplayFor(x => x.ShippingMethod)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span12">@Html.LabelFor(x => x.Address)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span12"><div class="ro-field">@Html.DisplayFor(x => x.Address)</div></div>
	</div>
	<div class="row-fluid">
	  	<div class="span12">@Html.LabelFor(x => x.Remarks)</div>
	</div>
	<div class="row-fluid">
	  	<div class="span12"><div class="ro-field">@Html.DisplayFor(x => x.Remarks)</div></div>
	</div>
</fieldset>