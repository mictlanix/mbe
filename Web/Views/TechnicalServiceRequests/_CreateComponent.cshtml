@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model TechnicalServiceRequestComponent

<div class='modal-header'>
	<button type='button' class='close' data-dismiss='modal'>&times;</button>
	<h3>@Resources.Component</h3>
</div>
<div class='modal-body'>
@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "component-modal-content" }, new { @class = "modal-form" })) {
    @Html.ValidationSummary(true)
    @Html.Hidden("RequestId", (int)ViewBag.RequestId)
	<div class="form-horizontal">
		<div class="row">
		  	<div class="col-xs-1 field-required">@Html.LabelFor(x => x.Quantity)</div>
		  	<div class="col-xs-5 field-required">@Html.LabelFor(x => x.Name)</div>
		  	<div class="col-xs-2">@Html.LabelFor(x => x.SerialNumber)</div>
		</div>
		<div class="row">
		  	<div class="col-xs-1">@Html.EditorFor(x => x.Quantity) @Html.ValidationMessageFor(x => x.Quantity)</div>
		  	<div class="col-xs-5">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
		  	<div class="col-xs-2">@Html.EditorFor(x => x.SerialNumber) @Html.ValidationMessageFor(x => x.SerialNumber)</div>
		</div>
		<div class="row">
		  	<div class="col-xs-8">@Html.LabelFor(x => x.Comment)</div>
		</div>
		<div class="row">
		  	<div class="col-xs-8">@Html.EditorFor(x => x.Comment)</div>
		</div>
	</div>
}
</div>
<div class='modal-footer'>
	<button type='button' class='btn btn-default' data-dismiss='modal'>@Resources.Discard</button>
	<button type='submit' class='btn btn-primary' onclick='$("#component-modal form").submit();'>@Resources.Create</button>
</div>
<script type='text/javascript'>
$('#Quantity').addClass("text-right");
</script>