@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Label

<tr id='id:@Model.Id'>
    <td>@Html.DisplayFor(x => x.Name)</td>
    <td>@Html.DisplayFor(x => x.Comment)</td>
    <td class='actions'>
        @if (ViewBag.Privilege.AllowUpdate) {
            @Html.ActionLink(" ", "Edit", new { id = Model.Id }, new { @class = "button icon edit icon-only open-modal", @title = Resources.Edit, data_modal_id = "label-modal" })
        }
        @if (ViewBag.Privilege.AllowRead) {
            @Html.ActionLink(" ", "View", new { id = Model.Id }, new { @class = "button icon view icon-only open-modal", @title = Resources.Details, data_modal_id = "label-modal" })
        }
        @if (ViewBag.Privilege.AllowDelete) {
            @Html.ActionLink(" ", "Delete", new { id = Model.Id }, new { @class = "button icon delete icon-only open-modal", @title = Resources.Delete, data_modal_id = "label-modal" })
        }
    </td>
</tr>