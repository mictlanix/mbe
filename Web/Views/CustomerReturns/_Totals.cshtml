@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model CustomerReturn

<fieldset>
    <legend>@Resources.Totals</legend>

    <div class="display-label left floating">
        @Html.LabelFor(x => x.Total)
    </div>
    <div class="display-field right floating">
        @Html.DisplayFor(x => x.Total)
    </div>

    <div class="display-label left floating">
        @Html.LabelFor(x => x.Taxes)
    </div>
    <div class="display-field right floating">
        @Html.DisplayFor(x => x.Taxes)
    </div>

    <div class="right floating">
    <p>
        @if (Model.Total > 0)
        {
            using (Html.BeginForm("ConfirmReturn", "CustomerReturns", new { id = Model.Id }))
            {
            <button type="button" class="icon print">@Resources.Print</button>
            <button id="complete" type="submit">@Resources.Complete</button>            
            }
        }
    </p>
    </div>
</fieldset>
<script type="text/javascript">
    $(function() {
    	$(".print").off();
        $(".print").printPage({
            url: "@Url.Action("PrintCustomerReturn", "CustomerReturns", new { id = Model.Id })"
        });
    });
</script>
