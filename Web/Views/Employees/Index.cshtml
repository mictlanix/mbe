@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model IEnumerable<Employee>

@{
    ViewBag.Title = Resources.Title_Employee;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Employees);
}

<h2>@Resources.DisplayName_Employees</h2>

<p>
@if(Privilege.AllowCreate)
{
    @Html.ActionLink(Resources.CreateNew, "Create", new { }, new { @class = "button icon add" })
}
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Employee().FirstName)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().LastName)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().Birthday)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().TaxpayerId)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().Gender)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().PersonalId)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().StartJobDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerId)
        </td>
        <td>
            @item.Gender.GetDisplayName()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartJobDate)
        </td>
        <td class="actions">
        	@if(Privilege.AllowUpdate)
        	{
            	@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            }
        	@if(Privilege.AllowRead)
        	{
            	@Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            }
        	@if(Privilege.AllowDelete)
        	{
            	@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
            }
        </td>
    </tr>
}

</table>
