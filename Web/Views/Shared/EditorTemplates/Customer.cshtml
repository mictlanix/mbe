@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Customer

<div class="row">
    <div class="span2">@Html.LabelFor(x => x.Code)</div>
    <div class="span6">@Html.LabelFor(x => x.Name)</div>
</div>

<div class="row">
    <div class="span2">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="span6">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
   
<div class="row">
    <div class="span2">@Html.LabelFor(x => x.Zone)</div>
    <div class="span3">@Html.LabelFor(x => x.PriceList)</div>
</div>

<div class="row">
    <div class="span2">@Html.EditorFor(model => model.Zone) @Html.ValidationMessageFor(model => model.Zone)</div>
    <div class="span3">@Html.EditorFor(model => model.PriceListId) @Html.ValidationMessageFor(model => model.PriceListId)</div>
</div>

<div class="row">
    <div class="span2">@Html.LabelFor(x => x.CreditLimit)</div>
    <div class="span2">@Html.LabelFor(x => x.CreditDays)</div>
</div>

<div class="row">
    <div class="span2">@Html.EditorFor(model => model.CreditLimit) @Html.ValidationMessageFor(model => model.CreditLimit)</div>
    <div class="span2">@Html.EditorFor(model => model.CreditDays)</div>
</div>
<div class="row-fluid">
    <div class="span12">
        @Html.EditorFor(x => x.Shipping)
        @Html.EditorFor(x => x.ShippingRequiredDocument)
    </div>
</div>
<div class="row">
    <div class="span8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row">
    <div class="span8">@Html.EditorFor(model => model.Comment)</div>
</div>





