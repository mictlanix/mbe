@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Customer

<div class="row">
    <div class="span2 field-required">@Html.LabelFor(x => x.Code)</div>
    <div class="span6 field-required">@Html.LabelFor(x => x.Name)</div>
</div>

<div class="row">
    <div class="span2">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="span6">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
   
<div class="row">
    <div class="span8 field-required">@Html.LabelFor(x => x.PriceList)</div>
</div>

<div class="row">
    <div class="span8">@Html.EditorFor(x => x.PriceListId) @Html.ValidationMessageFor(x => x.PriceListId)</div>
</div>

<div class="row">
    <div class="span2 field-required">@Html.LabelFor(x => x.CreditLimit)</div>
    <div class="span2 field-required">@Html.LabelFor(x => x.CreditDays)</div>
    <div class="span2">@Html.LabelFor(x => x.Zone)</div>
</div>

<div class="row">
    <div class="span2">@Html.EditorFor(x => x.CreditLimit) @Html.ValidationMessageFor(x => x.CreditLimit)</div>
    <div class="span2">@Html.EditorFor(x => x.CreditDays) @Html.ValidationMessageFor(x => x.CreditDays)</div>
    <div class="span2">@Html.EditorFor(x => x.Zone)</div>
</div>
<div class="row-fluid">
    <div class="span12">
        @Html.EditorFor(x => x.Shipping)
        @Html.EditorFor(x => x.ShippingRequiredDocument)
    </div>
</div>
<div class="row">
    <div class="span8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row">
    <div class="span8">@Html.EditorFor(model => model.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list { width:102%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model != null && Model.PriceList != null) {
<script type='text/javascript'>
$("#PriceListId").tokenInput("add", { id: "@Model.PriceList.Id", name: "@Model.PriceList.Name"});
</script>
}
