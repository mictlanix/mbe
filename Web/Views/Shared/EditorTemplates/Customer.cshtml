@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Customer

<div class="form-group">
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.Code) @Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="col-xs-8 field-required">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
    <div class="col-xs-12 field-required">@Html.LabelFor(x => x.PriceList) @Html.EditorFor(x => x.PriceListId) @Html.ValidationMessageFor(x => x.PriceListId)</div>
</div>
<div class="form-group">
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.CreditLimit) @Html.EditorFor(x => x.CreditLimit) @Html.ValidationMessageFor(x => x.CreditLimit)</div>
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.CreditDays) @Html.EditorFor(x => x.CreditDays) @Html.ValidationMessageFor(x => x.CreditDays)</div>
    <div class="col-xs-4">@Html.LabelFor(x => x.Zone) @Html.EditorFor(x => x.Zone)</div>
</div>
<div class="form-group">
    <div class="col-xs-12">
        @Html.EditorFor(x => x.Shipping)
        @Html.EditorFor(x => x.ShippingRequiredDocument)
    </div>
</div>
<div class="form-group">
    <div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(model => model.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list { width:102%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model != null && Model.PriceList != null) {
<script type='text/javascript'>
$("#PriceListId").tokenInput("add", { id: "@Model.PriceList.Id", name: "@Model.PriceList.Name"});
</script>
}
