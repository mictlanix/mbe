@using Mictlanix.BE
@using Mictlanix.BE.Model
@model int?

@{
    var field = ViewData.TemplateInfo.HtmlFieldPrefix;
}

@Html.TextBox("", Model)
<script type='text/javascript'>
$(function () {
    $("#@field").tokenInput('@Url.Action("GetSuggestions", "Products")', {
        hintText: '@Resources.HIntText',
        noResultsText: '@Resources.NoResultsText',
        searchingText: '@Resources.SearchingText',
        resultsFormatter: function(item){return ProductFormatter(item);},
        queryParam: 'pattern', minChars: 1, tokenLimit: 1
    });
});
</script>
