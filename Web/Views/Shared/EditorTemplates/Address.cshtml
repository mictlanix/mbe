@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Address

<div class="form-group">
  	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Street) @Html.EditorFor(x => x.Street) @Html.ValidationMessageFor(x => x.Street)</div>
	<div class="col-xs-3 field-required">@Html.LabelFor(x => x.ExteriorNumber) @Html.EditorFor(x => x.ExteriorNumber) @Html.ValidationMessageFor(x => x.ExteriorNumber)</div>
  	<div class="col-xs-3">@Html.LabelFor(x => x.InteriorNumber) @Html.EditorFor(x => x.InteriorNumber) @Html.ValidationMessageFor(x => x.InteriorNumber)</div>
</div>
<div class="form-group">
  	<div class="col-xs-2 field-required">@Html.LabelFor(x => x.PostalCode) @Html.EditorFor(x => x.PostalCode) @Html.ValidationMessageFor(x => x.PostalCode)</div>
  	<div class="col-xs-5 field-required">@Html.LabelFor(x => x.Neighborhood) @Html.EditorFor(x => x.Neighborhood) @Html.ValidationMessageFor(x => x.Neighborhood)</div>
	<div class="col-xs-5">@Html.LabelFor(x => x.Locality) @Html.EditorFor(x => x.Locality) @Html.ValidationMessageFor(x => x.Locality)</div>
</div>
<div class="form-group">
  	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Borough) @Html.EditorFor(x => x.Borough) @Html.ValidationMessageFor(x => x.Borough)</div>
  	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.State) @Html.EditorFor(x => x.State) @Html.ValidationMessageFor(x => x.State)</div>
</div>
<div class="form-group">
  	<div class="col-xs-6">@Html.LabelFor(x => x.City) @Html.EditorFor(x => x.City) @Html.ValidationMessageFor(x => x.City)</div>
	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Country) @Html.EditorFor(x => x.Country) @Html.ValidationMessageFor(x => x.Country)</div>
</div>

<div class="form-group">
  	<div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment) @Html.ValidationMessageFor(x => x.Comment)</div>
</div>