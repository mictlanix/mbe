@using Mictlanix.BE
@using Mictlanix.BE.Model
@model CustomerDiscount

<div class="form-group">
  	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.Product)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.EditorFor(x => x.ProductId) @Html.ValidationMessageFor(x => x.ProductId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.Discount)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.EditorFor(x => x.Discount) @Html.ValidationMessageFor(x => x.Discount)</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model != null && Model.Product != null) {
<script type='text/javascript'>
$("#ProductId").tokenInput("add", { id: "@Model.Product.Id", name: "@Model.Product.ToString()"});
</script>
}
