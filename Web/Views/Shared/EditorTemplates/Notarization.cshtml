@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Notarization

<div class="form-group">
	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.NotaryOffice) @Html.EditorFor(x => x.NotaryOffice) @Html.ValidationMessageFor(x => x.NotaryOffice)</div>
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Date) @Html.EditorFor(x => x.Date) @Html.ValidationMessageFor(x => x.Date)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.RequesterId) @Html.EditorFor(x => x.RequesterId) @Html.ValidationMessageFor(x => x.RequesterId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.DocumentDescription) @Html.EditorFor(x => x.DocumentDescription) @Html.ValidationMessageFor(x => x.DocumentDescription)</div>
</div>
<div class="form-group">
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.DeliveryDate) @Html.EditorFor(x => x.DeliveryDate) @Html.ValidationMessageFor(x => x.DeliveryDate)</div>
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.PaymentDate) @Html.EditorFor(x => x.PaymentDate) @Html.ValidationMessageFor(x => x.PaymentDate)</div>
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Amount) @Html.EditorFor(x => x.Amount) @Html.ValidationMessageFor(x => x.Amount)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
<script type='text/javascript'>
$('#Amount').addClass("text-right");
$('#Date,#DeliveryDate,#PaymentDate').datepicker({ language: '@WebConfig.Language', format: 'yyyy-mm-dd' });
@if (Model != null && Model.Requester != null) {
<text>$("#RequesterId").tokenInput("add", { id: "@Model.Requester.Id", name: "@Model.Requester.ToString()"});</text>
}
</script>