@using Mictlanix.BE
@using Mictlanix.BE.Model
@model PointOfSale

<div class="form-group">
    <div class="col-xs-6 field-required">@Html.LabelFor(x => x.Code) @Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="col-xs-6 field-required">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name)  @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
    <div class="col-xs-6 field-required">@Html.LabelFor(x => x.Store) @Html.EditorFor(x => x.StoreId)  @Html.ValidationMessageFor(x => x.StoreId)</div>
    <div class="col-xs-6 field-required">@Html.LabelFor(x => x.Warehouse) @Html.EditorFor(x => x.WarehouseId) @Html.ValidationMessageFor(x => x.WarehouseId)</div>
</div>
<div class="form-group">
    <div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list {width: 100%;}
div.token-input-dropdown {width: 650px;}
</style>
@if (Model != null && Model.Store != null) {
<script type='text/javascript'>
$("#StoreId").tokenInput("add", { id: "@Model.Store.Id", name: "@Model.Store.Name"});
</script>
}
@if (Model != null && Model.Warehouse != null) {
<script type='text/javascript'>
    $("#WarehouseId").tokenInput("add", { id: "@Model.Warehouse.Id", name: "@Model.Warehouse.Name" });
</script>
}