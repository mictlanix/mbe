@using Mictlanix.BE
@using Mictlanix.BE.Model
@model PointOfSale

<div class="row">
    <div class="span4 field-required">@Html.LabelFor(x => x.Code)</div>
    <div class="span4 field-required">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row">
    <div class="span4">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="span4">@Html.EditorFor(x => x.Name)  @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="row">
    <div class="span4 field-required">@Html.LabelFor(x => x.Store)</div>
    <div class="span4 field-required">@Html.LabelFor(x => x.Warehouse)</div>
</div>
<div class="row">
    <div class="span4">@Html.EditorFor(x => x.StoreId)  @Html.ValidationMessageFor(x => x.StoreId)</div>
    <div class="span4">@Html.EditorFor(x => x.WarehouseId) @Html.ValidationMessageFor(x => x.WarehouseId)</div>
</div>
<div class="row">
    <div class="span8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row">
    <div class="span8">@Html.EditorFor(x => x.Comment)</div>
</div>

<style type="text/css">
    ul.token-input-list {width: 103%;}
</style>

<style type="text/css">
    ul.token-input-list {width: 102%;}
    div.token-input-dropdown {width: 650px;}
</style>
@if (Model != null && Model.Store != null) {
    <script type='text/javascript'>
$("#StoreId").tokenInput("add", { id: "@Model.Store.Id", name: "@Model.Store.Name"});
    </script>
}

@if (Model != null && Model.Warehouse != null) {
    <script type='text/javascript'>
        $("#WarehouseId").tokenInput("add", { id: "@Model.Warehouse.Id", name: "@Model.Warehouse.Name" });
    </script>
}




