@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Supplier


<div class="form-group">
    <div class="col-xs-2 field-required">@Html.LabelFor(x => x.Code)</div>
    <div class="col-xs-6 field-required">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="form-group">
    <div class="col-xs-2">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="col-xs-6">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.Zone)</div>
    <div class="col-xs-2">@Html.LabelFor(x => x.CreditLimit)</div>
    <div class="col-xs-2">@Html.LabelFor(x => x.CreditDays)</div>
</div>
<div class="form-group">
    <div class="col-xs-4">@Html.EditorFor(x => x.Zone) @Html.ValidationMessageFor(x => x.Zone)</div>
    <div class="col-xs-2">@Html.EditorFor(x => x.CreditLimit)</div>
    <div class="col-xs-2">@Html.EditorFor(x => x.CreditDays)</div>
</div>
<div class="form-group">
    <div class="col-xs-8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="form-group">
    <div class="col-xs-8">@Html.EditorFor(x => x.Comment)</div>
</div>