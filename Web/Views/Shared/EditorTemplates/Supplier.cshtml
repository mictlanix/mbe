@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Supplier

<div class="form-group">
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.Code) @Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
    <div class="col-xs-8 field-required">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.CreditLimit) @Html.EditorFor(x => x.CreditLimit)</div>
    <div class="col-xs-4 field-required">@Html.LabelFor(x => x.CreditDays) @Html.EditorFor(x => x.CreditDays)</div>
    <div class="col-xs-4">@Html.LabelFor(x => x.Zone) @Html.EditorFor(x => x.Zone) @Html.ValidationMessageFor(x => x.Zone)</div>
</div>
<div class="form-group">
    <div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment)</div>
</div>