@using Mictlanix.BE
@using Mictlanix.BE.Model
@model TranslationRequest

<div class="form-group">
	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.Agency) @Html.EditorFor(x => x.Agency) @Html.ValidationMessageFor(x => x.Agency)</div>
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Date) @Html.EditorFor(x => x.Date) @Html.ValidationMessageFor(x => x.Date)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.RequesterId) @Html.EditorFor(x => x.RequesterId) @Html.ValidationMessageFor(x => x.RequesterId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-5 field-required">@Html.LabelFor(x => x.DocumentName) @Html.EditorFor(x => x.DocumentName) @Html.ValidationMessageFor(x => x.DocumentName)</div>
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.DeliveryDate) @Html.EditorFor(x => x.DeliveryDate) @Html.ValidationMessageFor(x => x.DeliveryDate)</div>
  	<div class="col-xs-3 field-required">@Html.LabelFor(x => x.Amount) @Html.EditorFor(x => x.Amount) @Html.ValidationMessageFor(x => x.Amount)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
</style>
<script type='text/javascript'>
@if (Model != null && Model.Requester != null) {
<text>$("#RequesterId").tokenInput("add", { id: "@Model.Requester.Id", name: "@Model.Requester.ToString()"});</text>
}
</script>