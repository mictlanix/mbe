@using Mictlanix.BE
@using Mictlanix.BE.Model
@model TranslationRequest

<div class="form-group">
	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Agency)</div>
  	<div class="col-xs-2 field-required">@Html.LabelFor(x => x.Date)</div>
</div>
<div class="form-group">
	<div class="col-xs-6">@Html.EditorFor(x => x.Agency) @Html.ValidationMessageFor(x => x.Agency)</div>
  	<div class="col-xs-2">@Html.EditorFor(x => x.Date) @Html.ValidationMessageFor(x => x.Date)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.RequesterId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.EditorFor(x => x.RequesterId) @Html.ValidationMessageFor(x => x.RequesterId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.DocumentName)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.EditorFor(x => x.DocumentName) @Html.ValidationMessageFor(x => x.DocumentName)</div>
</div>
<div class="form-group">
  	<div class="col-xs-2 field-required">@Html.LabelFor(x => x.DeliveryDate)</div>
  	<div class="col-xs-2 field-required offset4">@Html.LabelFor(x => x.Amount)</div>
</div>
<div class="form-group">
  	<div class="col-xs-2">@Html.EditorFor(x => x.DeliveryDate) @Html.ValidationMessageFor(x => x.DeliveryDate)</div>
  	<div class="col-xs-2 offset4">@Html.EditorFor(x => x.Amount) @Html.ValidationMessageFor(x => x.Amount)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="form-group">
  	<div class="col-xs-8">@Html.EditorFor(x => x.Comment)</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
<script type='text/javascript'>
$('#Amount').addClass("text-right");
$('#Date,#DeliveryDate').datepicker({ language: 'es', format: 'yyyy-mm-dd' });
@if (Model != null && Model.Requester != null) {
<text>$("#RequesterId").tokenInput("add", { id: "@Model.Requester.Id", name: "@Model.Requester.ToString()"});</text>
}
</script>
