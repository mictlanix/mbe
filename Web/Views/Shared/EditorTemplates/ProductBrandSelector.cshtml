@using Mictlanix.BE
@using Mictlanix.BE.Model
@model string

@{
    var field = ViewData.TemplateInfo.HtmlFieldPrefix;
}

@Html.TextBox("", Model)
<script type="text/javascript">
$(function () {
    $("#@field").tokenInput("@Url.Action("Brands", "Products")", {
        hintText: "@Resources.ChooseBrand",
        noResultsText: "@Resources.NoResultsText",
        searchingText: "@Resources.SearchingText",
        queryParam: "pattern",
        minChars: 1,
        tokenLimit: 1
    });
});
</script>
