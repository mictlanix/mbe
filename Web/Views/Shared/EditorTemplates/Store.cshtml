@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Store

<div class="form-group">
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Code) @Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.Taxpayer) @Html.EditorFor(x => x.TaxpayerId) @Html.ValidationMessageFor(x => x.TaxpayerId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Location) @Html.EditorFor(x => x.LocationId) @Html.ValidationMessageFor(x => x.LocationId)</div>
  	<div class="col-xs-6 field-required">@Html.LabelFor(x => x.Logo) @Html.EditorFor(x => x.Logo) @Html.ValidationMessageFor(x => x.Logo)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12">@Html.LabelFor(x => x.ReceiptMessage) @Html.EditorFor(x => x.ReceiptMessage)</div>
</div>
<div id='address-container'>
	@Html.EditorFor(x => x.Address)
</div>
<style type="text/css">
ul.token-input-list { width: 100%; }
</style>
<script type='text/javascript'>
@if (Model != null && Model.Taxpayer != null) {
<text>$("#TaxpayerId").tokenInput("add", { id: "@Model.Taxpayer.Id", name: "@Model.Taxpayer.ToString()"});</text>
}
@if (Model != null && Model.Location != null) {
<text>$("#LocationId").tokenInput("add", { id: "@Model.Location.Id", name: "@Model.Location.ToString()"});</text>
}
</script>
