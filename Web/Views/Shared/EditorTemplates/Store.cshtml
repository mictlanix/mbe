@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Store

<div class="row">
  	<div class="span2 field-required">@Html.LabelFor(x => x.Code)</div>
	<div class="span6 field-required">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="span2">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
	<div class="span6">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="span8 field-required">@Html.LabelFor(x => x.Taxpayer)</div>
</div>
<div class="row">
  	<div class="span8">@Html.EditorFor(x => x.TaxpayerId) @Html.ValidationMessageFor(x => x.TaxpayerId)</div>
</div>
<div class="row">
  	<div class="span4 field-required">@Html.LabelFor(x => x.Location)</div>
  	<div class="span4 field-required">@Html.LabelFor(x => x.Logo)</div>
</div>
<div class="row">
  	<div class="span4">@Html.EditorFor(x => x.Location) @Html.ValidationMessageFor(x => x.Location)</div>
  	<div class="span4">@Html.EditorFor(x => x.Logo) @Html.ValidationMessageFor(x => x.Logo)</div>
</div>
<div class="row">
  	<div class="span8">@Html.LabelFor(x => x.ReceiptMessage)</div>
</div>
<div class="row">
  	<div class="span8">@Html.EditorFor(x => x.ReceiptMessage)</div>
</div>
<div id='address-container'>
	@Html.EditorFor(x => x.Address)
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model != null && Model.Taxpayer != null) {
<script type='text/javascript'>
$("#TaxpayerId").tokenInput("add", { id: "@Model.Taxpayer.Id", name: "@Model.Taxpayer.ToString()"});
</script>
}
