@using Mictlanix.BE
@model int?

@{
    var field = ViewData.TemplateInfo.HtmlFieldPrefix;
}

@Html.TextBox("", Model)
<script type="text/javascript">
    $(function () {
        $("#@field").tokenInput("@Url.Action("GetSuggestions", "Customers")", {
            hintText: "@Resources.ChooseCustomer",
            noResultsText: "@Resources.NoResultsText",
            searchingText: "@Resources.SearchingText",
            queryParam: "pattern",
            minChars: 1,
            tokenLimit: 1
        });
    });
</script>
