@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Product

<div class="row">
  	<div class="span2 field-required">@Html.LabelFor(x => x.Code)</div>
	<div class="span6 field-required">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="span2">@Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(x => x.Code)</div>
	<div class="span6">@Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="span2 field-required">@Html.LabelFor(x => x.UnitOfMeasurement)</div>
  	<div class="span3">@Html.LabelFor(x => x.Model)</div>
  	<div class="span3">@Html.LabelFor(x => x.Brand)</div>
</div>
<div class="row">
  	<div class="span2">@Html.EditorFor(x => x.UnitOfMeasurement, "UnitOfMeasurement") @Html.ValidationMessageFor(x => x.UnitOfMeasurement)</div>
  	<div class="span3">@Html.EditorFor(x => x.Model) @Html.ValidationMessageFor(x => x.Model)</div>
  	<div class="span3">@Html.EditorFor(x => x.Brand) @Html.ValidationMessageFor(x => x.Brand)</div>
</div>
<div class="row">
	<div class="span4">@Html.LabelFor(x => x.SKU)</div>
  	<div class="span4">@Html.LabelFor(x => x.Location)</div>
</div>
<div class="row">
	<div class="span4">@Html.EditorFor(x => x.SKU) @Html.ValidationMessageFor(x => x.SKU)</div>
  	<div class="span4">@Html.EditorFor(x => x.Location) @Html.ValidationMessageFor(x => x.Location)</div>
</div>
<div class="row">
  	<div class="span8 field-required">@Html.LabelFor(x => x.SupplierId)</div>
</div>
<div class="row">
  	<div class="span8">@Html.EditorFor(x => x.SupplierId) @Html.ValidationMessageFor(x => x.SupplierId)</div>
</div>
<div class="row">
  	<div class="span8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row">
  	<div class="span8">@Html.EditorFor(x => x.Comment) @Html.ValidationMessageFor(x => x.Comment)</div>
</div>
<div class="row">
	<div class="span8 text-center">
		@Html.EditorFor(x => x.IsStockable)
		@Html.EditorFor(x => x.IsPerishable)
		@Html.EditorFor(x => x.IsSeriable)
		@Html.EditorFor(x => x.IsPurchasable)
		@Html.EditorFor(x => x.IsSalable)
		@Html.EditorFor(x => x.IsInvoiceable)
	</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model.Supplier != null) {
<script type='text/javascript'>
	$("#SupplierId").tokenInput("add", { id: "@Model.Supplier.Id", name: "@Model.Supplier.Name"});
</script>
}
