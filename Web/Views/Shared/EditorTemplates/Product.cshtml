@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Product

<div class="form-group">
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Code) @Html.EditorFor(x => x.Code) @Html.ValidationMessageFor(model => model.Code)</div>
	<div class="col-xs-8 field-required">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(model => model.Name)</div>
</div>
<div class="form-group">
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.UnitOfMeasurement) @Html.EditorFor(x => x.UnitOfMeasurement, "UnitOfMeasurement") @Html.ValidationMessageFor(model => model.UnitOfMeasurement)</div>
  	<div class="col-xs-4">@Html.LabelFor(x => x.Model) @Html.EditorFor(x => x.Model)</div>
  	<div class="col-xs-4">@Html.LabelFor(x => x.Brand) @Html.EditorFor(x => x.Brand)</div>
</div>
<div class="form-group">
	<div class="col-xs-6">@Html.LabelFor(x => x.SKU) @Html.EditorFor(x => x.SKU)</div>
  	<div class="col-xs-6">@Html.LabelFor(x => x.Location) @Html.EditorFor(x => x.Location)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.SupplierId) @Html.EditorFor(x => x.SupplierId) @Html.ValidationMessageFor(model => model.SupplierId)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12">@Html.LabelFor(x => x.Comment) @Html.EditorFor(x => x.Comment)</div>
</div>
<div class="form-group">
	<div class="col-xs-12 text-center">
		@Html.EditorFor(x => x.IsStockable)
		@Html.EditorFor(x => x.IsPerishable)
		@Html.EditorFor(x => x.IsSeriable)
		@Html.EditorFor(x => x.IsPurchasable)
		@Html.EditorFor(x => x.IsSalable)
		@Html.EditorFor(x => x.IsInvoiceable)
	</div>
</div>
<style type="text/css">
ul.token-input-list { width:100%; }
div.token-input-dropdown {width:650px;}
</style>
@if (Model.Supplier != null) {
<script type='text/javascript'>
	$("#SupplierId").tokenInput("add", { id: "@Model.Supplier.Id", name: "@Model.Supplier.Name"});
</script>
}
