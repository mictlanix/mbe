@using Mictlanix.BE
@using Mictlanix.BE.Model
@model TaxpayerIssuer

<div class="form-group">
  	<div class="col-xs-4 field-required">@Html.LabelFor(x => x.Id) @Html.EditorFor(x => x.Id) @Html.ValidationMessageFor(x => x.Id)</div>
	<div class="col-xs-8">@Html.LabelFor(x => x.Name) @Html.EditorFor(x => x.Name) @Html.ValidationMessageFor(x => x.Name)</div>
</div>
<div class="form-group">
  	<div class="col-xs-12 field-required">@Html.LabelFor(x => x.RegimeId) @Html.EditorFor(x => x.RegimeId) @Html.ValidationMessageFor(x => x.RegimeId)</div>
</div>

<style type="text/css">
ul.token-input-list { width: 100%; }
</style>
<script type="text/javascript">
$("#Id").css('text-transform', 'uppercase');
@if (Model.Regime != null) {
<text>$("#RegimeId").tokenInput("add", { id: "@Model.Regime.Id", name: "@Model.Regime.Description"});</text>
}
</script>