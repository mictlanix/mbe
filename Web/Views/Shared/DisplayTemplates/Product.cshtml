@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Product
<div class='row'>
  	<div class='col-xs-3'>@Html.LabelFor(x => x.Code)</div>
	<div class='col-xs-9'>@Html.LabelFor(x => x.Name)</div>
</div>
<div class='row'>
  	<div class='col-xs-3'><p class='form-control-static'>@Html.DisplayFor(x => x.Code)</p></div>
	<div class='col-xs-9'><p class='form-control-static'>@Html.DisplayFor(x => x.Name)</p></div>
</div>
<div class='row'>
    <div class='col-xs-12'>@Html.LabelFor(x => x.ProductServiceId)</div>
</div>
<div class='row'>
    <div class='col-xs-12'><p class='form-control-static'>@Html.DisplayFor(x => x.ProductService)</p></div>
</div>
<div class='row'>
  	<div class='col-xs-4'>@Html.LabelFor(x => x.UnitOfMeasurement)</div>
  	<div class='col-xs-4'>@Html.LabelFor(x => x.Model)</div>
  	<div class='col-xs-4'>@Html.LabelFor(x => x.Brand)</div>
</div>
<div class='row'>
  	<div class='col-xs-4'><p class='form-control-static'>@Html.DisplayFor(x => x.UnitOfMeasurement)</p></div>
  	<div class='col-xs-4'><p class='form-control-static'>@Html.DisplayFor(x => x.Model)</p></div>
  	<div class='col-xs-4'><p class='form-control-static'>@Html.DisplayFor(x => x.Brand)</p></div>
</div>
<div class='row'>
	<div class='col-xs-6'>@Html.LabelFor(x => x.SKU)</div>
  	<div class='col-xs-6'>@Html.LabelFor(x => x.Location)</div>
</div>
<div class='row'>
	<div class='col-xs-6'><p class='form-control-static'>@Html.DisplayFor(x => x.SKU)</p></div>
  	<div class='col-xs-6'><p class='form-control-static'>@Html.DisplayFor(x => x.Location)</p></div>
</div>
<div class='row'>
  	<div class='col-xs-12'>@Html.LabelFor(x => x.Comment)</div>
</div>
<div class='row'>
  	<div class='col-xs-12'><p class='form-control-static'>@Html.DisplayFor(x => x.Comment)</p></div>
</div>
<div class='row'>
	<div class='col-xs-12 text-center'>
		@Html.DisplayFor(x => x.IsStockable) @Html.DisplayNameFor(x => x.IsStockable)
		@Html.DisplayFor(x => x.IsPerishable) @Html.DisplayNameFor(x => x.IsPerishable)
		@Html.DisplayFor(x => x.IsSeriable) @Html.DisplayNameFor(x => x.IsSeriable)
		@Html.DisplayFor(x => x.IsPurchasable) @Html.DisplayNameFor(x => x.IsPurchasable)
		@Html.DisplayFor(x => x.IsSalable) @Html.DisplayNameFor(x => x.IsSalable)
		@Html.DisplayFor(x => x.IsInvoiceable) @Html.DisplayNameFor(x => x.IsInvoiceable)
	</div>
</div>
