@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model Customer

<div class="row-fluid">
    <div class="col-xs-3">@Html.LabelFor(x => x.Code)</div>
    <div class="col-xs-9">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row-fluid">
    <div class="col-xs-3"><div class="ro-field">@Html.DisplayFor(x => x.Code)</div></div>
    <div class="col-xs-9"><div class="ro-field">@Html.DisplayFor(x => x.Name)</div></div>
</div>
<div class="row">
    <div class="col-xs-9">@Html.LabelFor(x => x.PriceList)</div>
</div>
<div class="row">
    <div class="col-xs-9"><div class="ro-field">@Html.DisplayFor(x => x.PriceList.Name)</div></div>
</div>

<div class="row">
    <div class="col-xs-3">@Html.LabelFor(x => x.CreditLimit)</div>
    <div class="col-xs-3">@Html.LabelFor(x => x.CreditDays)</div>
    <div class="col-xs-3">@Html.LabelFor(x => x.Zone)</div>
</div>

<div class="row">
    <div class="col-xs-3"><div class="ro-field">@Html.DisplayFor(x => x.CreditLimit)</div></div>
    <div class="col-xs-3"><div class="ro-field">@Html.DisplayFor(x => x.CreditDays)</div></div>
    <div class="col-xs-3"><div class="ro-field">@Html.DisplayFor(x => x.Zone)</div></div>
</div>
<div class="row-fluid">
    <div class="col-xs-12">
        @Html.DisplayFor(x => x.Shipping) @Html.DisplayNameFor(x => x.Shipping)
        @Html.DisplayFor(x => x.ShippingRequiredDocument) @Html.DisplayNameFor(x => x.ShippingRequiredDocument)
    </div>
</div>
<div class="row-fluid">
    <div class="col-xs-12">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row-fluid">
    <div class="col-xs-12"><div class="ro-field">@Html.DisplayFor(x => x.Comment)</div></div>
</div>
