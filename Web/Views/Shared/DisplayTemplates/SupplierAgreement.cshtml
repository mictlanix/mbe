@using Mictlanix.BE
@using Mictlanix.BE.Model
@model SupplierAgreement

<div class="row">
    <div class="col-xs-5">@Html.LabelFor(x => x.Supplier)</div>
</div>
<div class="row">
    <div class="col-xs-5"><div class="ro-field">@Html.HiddenFor(x => x.Supplier.Id) @Html.DisplayFor(x => x.Supplier.Name)</div></div>
</div>
<div class="row">
    <div class="col-xs-4">@Html.LabelFor(x => x.Start)</div>
    <div class="col-xs-4">@Html.LabelFor(x => x.End)</div>
</div>
<div class="row">
    <div class="col-xs-4"><div class="ro-field">@Html.DisplayFor(x => x.Start)</div></div>
    <div class="col-xs-4"><div class="ro-field">@Html.DisplayFor(x => x.End)</div></div>
</div>
<div class="row">
    <div class="col-xs-8">@Html.LabelFor(x => x.Comment)</div>
</div>
<div class="row">
    <div class="col-xs-8"><div class="ro-field">@Html.DisplayFor(x => x.Comment)</div></div>
</div>


