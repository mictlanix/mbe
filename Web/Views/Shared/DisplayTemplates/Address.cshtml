	<div class='span2'>@Html.LabelFor(x => x.ExteriorNumber)</div>
  	<div class='span2'>@Html.LabelFor(x => x.InteriorNumber)</div>
</div>
<div class='row'>
  	<div class='span4'><div class='ro-field'>@Html.DisplayFor(x => x.Street)</div></div>
	<div class='span2'><div class='ro-field'>@Html.DisplayFor(x => x.ExteriorNumber)</div></div>
  	<div class='span2'><div class='ro-field'>@Html.DisplayFor(x => x.InteriorNumber)</div></div>
</div>
<div class='row'>
  	<div class='span2'>@Html.LabelFor(x => x.PostalCode)</div>
  	<div class='span3'>@Html.LabelFor(x => x.Neighborhood)</div>
	<div class='span3'>@Html.LabelFor(x => x.Locality)</div>
</div>
<div class='row'>
  	<div class='span2'><div class='ro-field'>@Html.DisplayFor(x => x.PostalCode)</div></div>
  	<div class='span3'><div class='ro-field'>@Html.DisplayFor(x => x.Neighborhood)</div></div>
	<div class='span3'><div class='ro-field'>@Html.DisplayFor(x => x.Locality)</div></div>
</div>
<div class='row'>
  	<div class='span4'>@Html.LabelFor(x => x.Borough)</div>
  	<div class='span4'>@Html.LabelFor(x => x.State)</div>
</div>
<div class='row'>
  	<div class='span4'><div class='ro-field'>@Html.DisplayFor(x => x.Borough)</div></div>
  	<div class='span4'><div class='ro-field'>@Html.DisplayFor(x => x.State)</div></div>
</div>
<div class='row'>
  	<div class='span4'>@Html.LabelFor(x => x.City)</div>
	<div class='span4'>@Html.LabelFor(x => x.Country)</div>
</div>
<div class='row'>
  	<div class='span4'><div class='ro-field'>@Html.DisplayFor(x => x.City)</div></div>
	<div class='span4'><div class='ro-field'>@Html.DisplayFor(x => x.Country)</div></div>
</div>
<div class='row'>
  	<div class='span8'>@Html.LabelFor(x => x.Comment)</div>
</div>
