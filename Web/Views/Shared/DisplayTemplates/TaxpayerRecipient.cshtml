@using Mictlanix.BE
@using Mictlanix.BE.Model
@model TaxpayerRecipient

<div class="row">
  	<div class="col-xs-3">@Html.LabelFor(x => x.Id)</div>
	<div class="col-xs-5">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="col-xs-3"><div class="ro-field">@Html.DisplayFor(x => x.Id)</div></div>
	<div class="col-xs-5"><div class="ro-field">@Html.DisplayFor(x => x.Name)</div></div>
</div>
<div class="row">
  	<div class="col-xs-8">@Html.LabelFor(x => x.Email)</div>
</div>
<div class="row">
  	<div class="col-xs-8"><div class="ro-field">@Html.DisplayFor(x => x.Email)</div></div>
</div>
@if(Model.Address != null) {
	@Html.DisplayFor(x => x.Address)
}