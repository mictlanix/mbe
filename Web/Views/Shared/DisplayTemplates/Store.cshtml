@using Mictlanix.BE
@using Mictlanix.BE.Model
@model Store

<div class="row">
  	<div class="col-xs-4">@Html.LabelFor(x => x.Code)</div>
	<div class="col-xs-8">@Html.LabelFor(x => x.Name)</div>
</div>
<div class="row">
  	<div class="col-xs-4"><p class="form-control-static">@Html.DisplayFor(x => x.Code)</p></div>
	<div class="col-xs-8"><p class="form-control-static">@Html.DisplayFor(x => x.Name)</p></div>
</div>
<div class="row">
  	<div class="col-xs-12">@Html.LabelFor(x => x.Taxpayer)</div>
</div>
<div class="row">
  	<div class="col-xs-12"><p class="form-control-static">@Html.DisplayFor(x => x.Taxpayer, "String")</p></div>
</div>
<div class="row">
  	<div class="col-xs-6">@Html.LabelFor(x => x.Location)</div>
  	<div class="col-xs-6">@Html.LabelFor(x => x.Logo)</div>
</div>
<div class="row">
  	<div class="col-xs-6"><p class="form-control-static">@Html.DisplayFor(x => x.Location)</p></div>
  	<div class="col-xs-6"><p class="form-control-static">@Html.DisplayFor(x => x.Logo, "String")</p></div>
</div>
<div class="row">
  	<div class="col-xs-12">@Html.LabelFor(x => x.ReceiptMessage)</div>
</div>
<div class="row">
  	<div class="col-xs-12"><p class="form-control-static">@Html.DisplayFor(x => x.ReceiptMessage)</p></div>
</div>
<div id='address-container'>
	@Html.DisplayFor(x => x.Address)
</div>
