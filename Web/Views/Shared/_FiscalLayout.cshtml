@using Mictlanix.BE
@using Mictlanix.BE.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/letter.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
	    <div id="logo">
	        <img src="@Url.Content(ViewBag.StoreLogo)"
	             alt="@Configuration.LogoTitle"
	             title="@Configuration.LogoAlt"/>
	    </div>
	    <div style="margin:10px 250px 10px 10px">
	        <h1>@ViewBag.StoreName</h1>
	        <h4 class="black">
	        	@ViewBag.TaxpayerName<br/>
	        	@ViewBag.Taxpayer
	        </h4>
	        <h4>
	        	@ViewBag.Address.StreetAndNumber<br/>
	        	@ViewBag.Address.Neighborhood,
	        	@ViewBag.Address.Locality,
	        	@ViewBag.Address.ZipCode<br/>
	        	@ViewBag.Address.Borough,
	        	@ViewBag.Address.State
	    	</h4>
    	</div>
        <h2>@ViewBag.Title</h2>
    </header>
    <section id="main">
        @RenderBody()
    </section>
    <footer></footer>
</body>
</html>