@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@using Newtonsoft.Json.Linq;


@model SpecialReceipt
@{
    dynamic json = JValue.Parse(Model.JSON);
}
<fieldset>
    <div class='row'>
        <div class='col-xs-8'>
            <dl class=''>
                <dt>@Resources.Customer</dt>
                <dd>@Html.DisplayFor(x => x.CustomerName)</dd>

                <dt>@Resources.ShipTo</dt>
                <dd>@Html.DisplayFor(x => x.CustomerShipTo, "String")</dd>

                <dt>@Resources.Comment</dt>
                <dd>@Html.DisplayFor(x => x.Comment)</dd>
            </dl>
        </div>
        <div class='col-xs-4'>
            <dl class='dl-horizontal'>
                <dt>@Resources.Id</dt>
                <dd>
                    <span>@Html.DisplayFor(x => x.Id)</span>
                    <a href="javascript:void(0)" data-toggle="tooltip" title="@Resources.Serial @Html.DisplayFor(x => x.Serial)">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </a>
                </dd>
                <dt>@Resources.SalesPerson</dt>
                <dd>@Html.DisplayFor(x => x.SalesPerson.Name)</dd>

                <dt>Unidad de Transporte</dt>
                <dd>
                    @json.unidadDeTransporte
                </dd>

                <dt>@Resources.Date</dt>
                <dd>@Html.DisplayFor(x => x.Date)</dd>
            </dl>
        </div>
    </div>
</fieldset>