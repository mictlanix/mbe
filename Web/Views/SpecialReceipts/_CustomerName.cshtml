@using Mictlanix.BE.Model
@using Mictlanix.BE
@using Mictlanix.BE.Web.Helpers

@model SpecialReceipt

    <a id="customer_name" class="editable alert-link" data-type="text" data-placement="right" data-pk="@Model.Id"
       data-url='@Url.Action("SetCustomerName", new { id = Model.Id })'
       data-inputclass="input-xlarge" data-emptytext="@Resources.Empty">
            @Html.DisplayFor(x => x.CustomerName)
    </a>

<script type="text/javascript">
    $("#customer_name").editable();
</script>