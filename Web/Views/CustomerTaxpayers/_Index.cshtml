@using Mictlanix.BE
@using Mictlanix.BE.Model
@using Mictlanix.BE.Web.Helpers
@model IEnumerable<CustomerTaxpayer>

@{
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.Addresses);
}

<table>
    <tr>
        <th>@Resources.TaxpayerId</th>
        <th>@Resources.TaxpayerName</th>
        <th>@Resources.Street</th>
        <th>@Resources.Neighborhood</th>
        <th>@Resources.PostalCode</th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td class="center stretch">@Html.DisplayFor(x => item.Id)</td>
        <td>@Html.DisplayFor(x => item.Name)</td>
        <td>@Html.DisplayFor(x => item.Address.StreetAndNumber)</td>
        <td>@Html.DisplayFor(x => item.Address.Neighborhood)</td>
        <td class='number'>@Html.DisplayFor(x => item.Address.PostalCode)</td>
        <td class='actions'>
        	@if(Privilege.AllowUpdate){
            	@Html.ActionLink(" ", "Edit", "CustomerTaxpayers", new { id = item.Id }, new { @class = "button icon edit icon-only openDialog", title = Resources.Edit, data_dialog_id = "taxpayerDlg", data_dialog_title = Resources.Edit })
            }
        	@if(Privilege.AllowRead){
        	    @Html.ActionLink(" ", "Details", "CustomerTaxpayers", new { id = item.Id }, new { @class = "button icon view icon-only openDialog", title = Resources.Details, data_dialog_id = "taxpayerDlg", data_dialog_title = Resources.Details })
            }
        	@if(Privilege.AllowDelete){
            	@Html.ActionLink(" ", "Delete", "CustomerTaxpayers", new { id = item.Id }, new { @class = "button icon delete icon-only openDialog", @title = Resources.Delete, data_dialog_id = "taxpayerDlg", data_dialog_title = Resources.Delete })
            }
        </td>
    </tr>
}
</table>
<script type='text/javascript'>
	bindOpenDialog('.openDialog');
</script>