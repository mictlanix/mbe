@using Mictlanix.BE
@using Mictlanix.BE.Model
@model IEnumerable<SalesOrderDetail>


<table>
    <tr>
        <th>
            @Html.LabelFor(x => new SalesOrderDetail().ProductCode)
        </th>

        <th>
            @Html.LabelFor(x => new SalesOrderDetail().ProductName)
        </th>

        <th>
            @Html.LabelFor(x => new SalesOrderDetail().Quantity)
        </th>

        <th>
            @Html.LabelFor(x => new SalesOrderDetail().Price)
        </th>
        
        <th>
            @Html.LabelFor(x => new SalesOrderDetail().Discount)
        </th>

        <th>
            @Html.LabelFor(x => new SalesOrderDetail().TaxRate)
        </th>
        
        <th>
            @Html.LabelFor(x => new SalesOrderDetail().Total)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="number">
            @Html.DisplayFor(x => item.ProductCode)
        </td>
        <td>
            @Html.DisplayFor(x => item.ProductName)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Quantity)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Price)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Discount)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Taxes)
        </td>
        <td class="number">
            @Html.DisplayFor(x => item.Total)
        </td>
    </tr>
}
<tr>
    <td></td>
    <td class="number">
        @Resources.Total
    </td>
    <td class="number">
        @Model.Sum(x => x.Quantity).ToString("0.####")
    </td>
    <td></td>
    <td></td>
    <td class="number">
        @Model.Sum(x => x.Taxes).ToString("c")
    </td>
    <td class="number">
        @Model.Sum(x => x.Total).ToString("c")
    </td>
</tr>
</table>
